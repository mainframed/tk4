WAIT     TITLE 'W A I T T I M E  ***  WAIT TIME EXTENSION FOR TSO'
         PUNCH '  ALIAS SET '
         COPY  OPTIONGB
         SPACE 1
         SYSPARM LIST=YES
         SPACE 2
