COPY     TITLE 'COPY CARD TO OUTPUT'                             79174
***********************************************************************
**                                                                   **
**  This is a quick and dirty solution to card listing or copying.   **
**  We have an execution batch processor for standard output and one **
**    for cards. Submitting a job with the matching job class causes **
**    JES2 to invoke this program to list or copy the input.         **
**  It is fast and cheap <g>                                         **
**                                                                   **
***********************************************************************
         PRINT NOGEN
COPY     START 0
         USING *,12
         STM   14,12,12(13)
         LR    12,15
         LA    9,SAVE
         ST    9,8(13)
         ST    13,4(9)
         LR    13,9
         SPACE
REPEAT   OPEN  (SYSIN,(INPUT))
         TM    SYSIN+48,X'10'   OPEN ?
         BZ    NO1           NO
         OPEN  (SYSPRINT,(OUTPUT))
         TM    SYSPRINT+48,X'10'    OPEN ?
         BZ    NO2           NO
LOOP     GET   SYSIN
         LR    0,1
         PUT   SYSPRINT
         B     LOOP
         SPACE 3
EOF      CLOSE (SYSIN)
         CLOSE (SYSPRINT)
*        B     REPEAT
         L     13,4(13)
         LM    14,12,12(13)
         SR    15,15
         BR    14
         SPACE 2
NO2      MVC   NO1+22(8),=C'SYSPRINT'
*        B     NO1
NO1      WTO   '** CONVERT **  SYSIN    DD MISSING',ROUTCDE=11
         ABEND 16
         EJECT
SAVE     DS    18F
         SPACE
SYSIN    DCB   DDNAME=SYSIN,DSORG=PS,EODAD=EOF,EROPT=ACC,MACRF=GL,     X
               BUFNO=20,RECFM=FB,LRECL=80
SYSPRINT DCB  DDNAME=SYSPRINT,DSORG=PS,EROPT=ACC,MACRF=PM,             X
               BUFNO=20,RECFM=FB,LRECL=80,BLKSIZE=80
         END
