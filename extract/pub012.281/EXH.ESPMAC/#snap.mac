         MACRO ,
&NM      #SNAP &PDATA=,&SDATA=,&STORAGE=,&LIST=,&STRHDR=
.*
.*   #SNAP INVOKES THE @SNAPPER SUBROUTINE THAT MANAGES THE DCB, ETC.
.*   PARAMETERS ARE AS DOCUMENTED FOR THE SNAP MACRO.
.*
         AIF   (T'&LIST NE 'O' AND T'&STORAGE NE 'O').TWO
         AIF   (T'&LIST NE 'O' AND N'&STRHDR GT 1).MIM
&NM      ICM   R15,15,=V(@SNAPPER)
         BZ    ZZEX&SYSNDX
         LA    R1,ZZSN&SYSNDX
         BASSM R14,R15
         B     ZZEX&SYSNDX
ZZSN&SYSNDX SNAP PDATA=&PDATA,SDATA=&SDATA,LIST=&LIST,STRHDR=&STRHDR,  *
               STORAGE=&STORAGE,MF=L
ZZEX&SYSNDX DS 0H
         MEXIT ,
.TWO     MNOTE 8,'#SNAP: USE EITHER STORAGE OR LIST'
         MEXIT ,
.MIM     MNOTE 8,'STRHDR MUST MATCH LIST OR STORAGE FORMAT'
         MEND  ,
