         MACRO
&NM      PRTB  &BAD,&DEV=,&TITLE=0,&FOOTER=0,&CC=,&OPT=,&MODE=  GP14261
.*   PRINT A LINE DEFINED BY A BCON MACRO (L'TXT/TXT)
         LCLA  &CT,&HF
         AIF   (&TITLE EQ 0 AND &FOOTER EQ 0).NOT
         AIF   (&TITLE LT 16 AND &FOOTER LT 16).OKT
         MNOTE 4,'*** NON-NUMERIC TITLE/FOOTER NOT SUPPORTED'
.OKT     ANOP  ,
&HF      SETA  &TITLE*16+&FOOTER
.NOT     ANOP  ,
&NM      PRTCOM PRTB,FUN=13,B1=&HF,A1=&BAD,DEV=&DEV,OPT=(&OPT,&CC)
         MEND
