         MACRO ,
&NM      INITIOWK &SUB=D64,&RESERVE=
         LCLA  &I
         LCLC  &N
&N       SETC  '&SYSNDX'
*  MACRO MAPIOWK  NEEDED FOR EXHCSDAP MAPPING
         USING IOWORK,R7     DECLARE IT
&NM      LDSUB NAME=&SUB,RESERVE=&RESERVE
         MVI   DRFLAG,0      RESET FLAG BYTE
         TM    OPTS,DEBUG    RUNNING IN DEBUG MODE ?
         BZ    ZZI&N.B       NO, LEAVE AS IS
         MVI   DRFLAG,DRDEBUG     PROPAGATE DEBUG BIT
ZZI&N.B  XC    DRTTR(8),DRTTR     CLEAR TTR FIELDS
         MVC   DRDSN(L'DRDSN+L'DRVOL+L'DRMEM),BLANKS    CLEAR NAMES
         SR    R2,R2                                            GP02231
         ICM   R2,3,DRMAXMSZ   GET ASSEMBLED BUFFER SIZE        GP02231
         BNZ   ZZI&N.C                                          GP02231
         L     R2,=X'0000FFFF'  SET MAXIMUM PROCESSABLE         GP02231
         STH   R2,DRMAXMSZ     GET ASSEMBLED MAXIMUM SIZE       GP02231
ZZI&N.C  STH   R2,DRMAXL     SET ACTUAL SIZE AVAILABLE          GP02231
         STH   R2,DRLEN      MAX RECORD SIZE
         MVC   DRNAME,INVOKE+5   SAVE VERB USED TO INVOKE THIS  GP02231
         MVC   DRECBC,CANECBB    COPY CANCEL ECB ADDRESS        GP02231
         XC    DRNCCH,DRNCCH     CLEAR CCHH FIELDS
         MEND  ,
