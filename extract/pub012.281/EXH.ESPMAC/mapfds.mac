         MACRO ,
&NM      MAPFDS &DSECT=,&PFX=FDS,&LEN=0                 ADDED ON 87312
.*   MAPPING FOR USE IN @SCREENS
         LCLC  &P,&Q
&P       SETC  '&PFX'
&Q       SETC  '&P'.'SECT'
         AIF   ('&NM' EQ '').DFDS
&Q       SETC  '&NM'
.DFDS    AIF   ('&DSECT' EQ 'NO').NODS
&Q       DSECT ,
         AGO   .CMDS
.NODS    AIF   ('&NM' EQ '').CMDS
&Q       DS    0X
.CMDS    ANOP  ,
&P.LEN   DC    X'00'         LENGTH-1 OF TEXT
&P.FG    DC    X'00'         OPTION FLAGS
&P.FMOVE EQU   X'80'           ENTRY CONTAINS REPLACEMENT TEXT
&P.FPOS  EQU   X'40'           POSITIONAL PARAMETER ENTRY
&P.FKEY  EQU   X'20'           KEYWORD=VALUE OR (VALUE) ENTRY
&P.FPOS2 EQU   &P.FPOS+&P.FKEY  CHAINED POSITIONAL UID/PSW/NPSW  87361
&P.FREQ  EQU   X'02'           MANDATORY FIELD                   87314
&P.FLONG EQU   X'01'           KEYWORD NOT ABBREVIATED
&P.FDAD  DC    SL2(0)        ADDRESS OF FDIN/FDINP DEFINITION
         AIF   ('&LEN' EQ '0' OR '&LEN' EQ '').NULLEN
&P.TEXT  DC    CL(&LEN)' '   TEXT FIELD
         AGO   .COMLEN
.NULLEN  ANOP  ,
&P.TEXT  DC    0C' '         TEXT FIELD
.COMLEN  ANOP  ,
&P.RLEN  DC    AL1(0)        (OPTIONAL) REPLACEMENT TEXT LENGTH
&P.RTXT  DC    0C' '         (OPTIONAL) REPLACEMENT TEXT
         MEND  ,
