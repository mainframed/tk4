         MACRO ,
&NM      FDLPRO &TEXT,&LEN,&PROMPT=PROMPT,&SAFE=YES
.*
.*  THIS QUICKY MOVES A TEXT STRING INTO AN FDLINE
.*    PROMPT
.*  USES MVCL TO AVOID OVERRUNING THE OUTPUT AREA
.*
         LCLC  &L
&L       SETC  'L'''
         AIF   ('&SAFE' EQ 'NO').SHORT
&NM      LA    R14,&PROMPT
         LA    R15,&L&PROMPT
         MACPARM R0,&TEXT
         MACPARM R1,&LEN,NULL=&L&TEXT
         ICM   R1,8,BLANKS
         MVCL  R14,R0
         MEXIT ,
.SHORT   ANOP  ,             HOPE FOR THE BEST
&NM      MVC   &PROMPT,BLANKS
         MVC2  &PROMPT,&TEXT
         MEND  ,
