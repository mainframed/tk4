         MACRO ,
&NM      TTYDEFIN &NAME=,&LENSF=0,&TABTYP=0,&CLD=,&CLR=,&CLT=,         *
               &BRK=,&TEXT=,&ERR=,&HIDE=,&WARN=,&W80=,&W132=,          *
               &TAB1=,&TAB2=,&P1N=,&P1F=,&P2N=,&P2F=
.*                                                      ADDED ON 84092
.*       THIS MEMBER EXPANDS TTY CONTROL SEQUENCE DEFINITIONS.
.*       ONLY CURRENT USE IS IN MEMBER IGPVOLT.
.*
         LCLA  &OFFS(16),&OLEN(16)
         LCLC  &OTXT(16),&OPTS(4)
         LCLA  &I,&PTR
&PTR     SETA  16+4          OFFSET TO FIRST ENTRY
.*             THE MAXIMUM VALUE OF 16 IS MATCHED BY FLAG
.*             TDOPTOFF IN MEMBER TTYFLAGS.
&OPTS(1) SETC  '0'
&OPTS(2) SETC  '0'
&OPTS(3) SETC  '0'
&OPTS(4) SETC  '0'
         AIF   (T'&NAME EQ 'O').NONAME
         DC    CL8'&NAME'    DEVICE NAME/ACRONYM
.NONAME  AIF   (T'&TABTYP EQ 'O').NOTABLN
&OPTS(4) SETC  '&TABTYP'
.NOTABLN AIF   (T'&LENSF EQ 'O').NOSFLEN
&OPTS(3) SETC  '&LENSF'      ATTRIBUTE SIZE ON SCREEN
.NOSFLEN AIF   (T'&CLT EQ 'O').NOCLT
&OFFS(1) SETA  &PTR
&OLEN(1) SETA  (K'&CLT+1)/2
&OTXT(1) SETC  '&CLT'
&PTR     SETA  &PTR+1+&OLEN(1)
.NOCLT   AIF   (T'&CLD EQ 'O').NOCLD
&OFFS(2) SETA  &PTR
&OLEN(2) SETA  (K'&CLD+1)/2
&OTXT(2) SETC  '&CLD'
&PTR     SETA  &PTR+1+&OLEN(2)
.NOCLD   AIF   (T'&CLR EQ 'O').NOCLR
&OFFS(3) SETA  &PTR
&OLEN(3) SETA  (K'&CLR+1)/2
&OTXT(3) SETC  '&CLR'
&PTR     SETA  &PTR+1+&OLEN(3)
.NOCLR   AIF   (T'&BRK EQ 'O').NOBRK
&OFFS(4) SETA  &PTR
&OLEN(4) SETA  (K'&BRK+1)/2
&OTXT(4) SETC  '&BRK'
&PTR     SETA  &PTR+1+&OLEN(4)
.NOBRK   AIF   (T'&TEXT EQ 'O').NOTEXT
&OFFS(5) SETA  &PTR
&OLEN(5) SETA  (K'&TEXT+1)/2
&OTXT(5) SETC  '&TEXT'
&PTR     SETA  &PTR+1+&OLEN(5)
.NOTEXT  AIF   (T'&ERR EQ 'O').NOERR
&OFFS(6) SETA  &PTR
&OLEN(6) SETA  (K'&ERR+1)/2
&OTXT(6) SETC  '&ERR'
&PTR     SETA  &PTR+1+&OLEN(6)
.NOERR   AIF   (T'&HIDE EQ 'O').NOHIDE
&OFFS(7) SETA  &PTR
&OLEN(7) SETA  (K'&HIDE+1)/2
&OTXT(7) SETC  '&HIDE'
&PTR     SETA  &PTR+1+&OLEN(7)
.NOHIDE  AIF   (T'&WARN EQ 'O').NOWARN
&OFFS(8) SETA  &PTR
&OLEN(8) SETA  (K'&WARN+1)/2
&OTXT(8) SETC  '&WARN'
&PTR     SETA  &PTR+1+&OLEN(8)
.NOWARN  AIF   (T'&W80 EQ 'O').NOW80
&OFFS(9) SETA  &PTR
&OLEN(9) SETA  (K'&W80+1)/2
&OTXT(9) SETC  '&W80'
&PTR     SETA  &PTR+1+&OLEN(9)
.NOW80   AIF   (T'&W132 EQ 'O').NOW132
&OFFS(10) SETA &PTR
&OLEN(10) SETA (K'&W132+1)/2
&OTXT(10) SETC '&W132'
&PTR     SETA  &PTR+1+&OLEN(10)
.NOW132  AIF   (T'&TAB1 EQ 'O').NOTAB1
&OFFS(11) SETA &PTR
&OLEN(11) SETA (K'&TAB1+1)/2
&OTXT(11) SETC '&TAB1'
&PTR     SETA  &PTR+1+&OLEN(11)
.NOTAB1  AIF   (T'&TAB2 EQ 'O').NOTAB2
&OFFS(12) SETA &PTR
&OLEN(12) SETA (K'&TAB2+1)/2
&OTXT(12) SETC '&TAB2'
&PTR     SETA  &PTR+1+&OLEN(12)
.NOTAB2  AIF   (T'&P1N EQ 'O').NOP1N
&OFFS(13) SETA &PTR
&OLEN(13) SETA (K'&P1N+1)/2
&OTXT(13) SETC '&P1N'
&PTR     SETA  &PTR+1+&OLEN(13)
.NOP1N   AIF   (T'&P1F EQ 'O').NOP1F
&OFFS(14) SETA &PTR
&OLEN(14) SETA (K'&P1F+1)/2
&OTXT(14) SETC '&P1F'
&PTR     SETA  &PTR+1+&OLEN(14)
.NOP1F   AIF   (T'&P2N EQ 'O').NOP2N
&OFFS(15) SETA &PTR
&OLEN(15) SETA (K'&P2N+1)/2
&OTXT(15) SETC '&P2N'
&PTR     SETA  &PTR+1+&OLEN(15)
.NOP2N   AIF   (T'&P2F EQ 'O').NOP2F
&OFFS(16) SETA &PTR
&OLEN(16) SETA (K'&P2F+1)/2
&OTXT(16) SETC '&P2F'
&PTR     SETA  &PTR+1+&OLEN(16)
.NOP2F   ANOP  ,             END OF USER SUPPLIED PARMS
.*
&NM      DC    AL1(&OFFS(1),&OFFS(2),&OFFS(3),&OFFS(4),&OFFS(5),&OFFS(6*
               ),&OFFS(7),&OFFS(8),&OFFS(9),&OFFS(10),&OFFS(11),&OFFS(1*
               2),&OFFS(13),&OFFS(14),&OFFS(15),&OFFS(16))
         DC    AL1(&OPTS(1),&OPTS(2),&OPTS(3),&OPTS(4))  OPTIONS
&I       SETA  0
.EXPAND  AIF   (&I GE 16).MEND
&I       SETA  &I+1
         AIF   (&OLEN(&I) EQ 0 AND &OFFS(&I) EQ 0).EXPAND
         AIF   (&OLEN(&I) EQ 0).EXPNULL
         DC    AL1(&OLEN(&I)),X'&OTXT(&I)'
         AGO   .EXPAND
.EXPNULL DC    AL1(0)
         AGO   .EXPAND
.MEND    MEND  ,
