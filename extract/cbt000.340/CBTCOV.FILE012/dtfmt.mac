         MACRO
&NAME    DTFMT &BLKSIZE=,&DEVADDR=,&EOFADDR=,&FILABL=,&IOAREA1=,       X
               &IOAREA2=,&CKPTREC=,&ERROPT=,&READ=,&IOREG=,&WORKA=,    X
               &LABADDR=,&MODNAME=,&HDRINFO=,&RDONLY=,&RECFORM=,       X
               &RECSIZE=,&REWIND=,&SEPASMB=,&TPMARK=,&TYPEFLE=,        X
               &NOTEPNT=,&VARBLD=,&WLRERR=
         DTFALL
&NAME    DS    0H
         MNOTE 0,'DTFMT NOT SUPPORTED BY O.S.'
         SPACE 2
*        BASIC CODE NECESSARY IS
*        DCB   DSORG=PS,.....      FOLLOWED BY
         SPACE 1
         AIF   (T'&BLKSIZE EQ 'O').STEP1
*        BLKSIZE=   ...,BLKSIZE=NNN
.STEP1   AIF   (T'&DEVADDR EQ 'O').STEP2
*        DEVADDR=   ...,VOLUME=    IN THE DD STATEMENT
.STEP2   AIF   (T'&EOFADDR EQ 'O').STEP3
*        EOFADDR=   ...,EODAD=XXXXXXXX
.STEP3   AIF   (T'&FILABL EQ 'O').STEP4
*        FILABL=    ...,LABEL=     IN THE DD STATEMENT
.STEP4   AIF   (T'&IOAREA1 EQ 'O').STEP5
*        IOAREA1=   ...,BUFNO=1,MACRF=(..M..)
.STEP5   AIF   (T'&IOAREA2 EQ 'O').STEP6
*        IOAREA2=   ...,BUFNO=2    OR MORE
.STEP6   AIF   (T'&CKPTREC EQ 'O').STEP7
*        CKPTREC=   INTERSPERSED CHKPT RECORDS NOT ALLOWED BY O.S.
.STEP7   AIF   (T'&ERROPT EQ 'O').STEP8
*        ERROPT=    ...,EROPT=ACC/SKP/ABE    FOR IGNORE OR SKIP
*                   ...,SYNAD=XXXXXXXX       FOR USER HANDLING ROUTINE
.STEP8   AIF   (T'&READ EQ 'O').STEP9
*        READ=      THIS IS AN OPTION OF THE OPEN MACRO UNDER O.S.
.STEP9   AIF   (T'&IOREG EQ 'O').STEP10
*        IOREG=     ...,MACRF=(..L..)
.STEP10  AIF   (T'&WORKA EQ 'O').STEP11
*        WORKA=     ...,MACRF=(..M..)
.STEP11  AIF   (T'&LABADDR EQ 'O').STEP12
*        LABADDR=   ...,EXLST=XXXXXXXX       FOR STANDARD LABELS
*                   ...,LABEL=(,SUL)         (IN THE DD STATEMENT)
*                   FOR NON-STANDARD LABELS, SEE SYSTEMS
.STEP12  AIF   (T'&MODNAME EQ 'O').STEP13
*        MODNAME=   NOT APPLICABLE
.STEP13  AIF   (T'&HDRINFO EQ 'O').STEP14
*        HDRINFO=   NOT APPLICABLE
.STEP14  AIF   (T'&RDONLY EQ 'O').STEP15
*        RDONLY=    NOT APPLICABLE
.STEP15  AIF   (T'&RECFORM EQ 'O').STEP16
*        RECFORM=   ...,RECFM=XXX
.STEP16  AIF   (T'&RECSIZE EQ 'O').STEP17
*        RECSIZE=   ...,LRECL=NNN
.STEP17  AIF   (T'&REWIND EQ 'O').STEP18
*        REWIND=    THIS IS AN OPTION OF THE OPEN MACRO UNDER O.S.
.STEP18  AIF   (T'&SEPASMB EQ 'O').STEP19
*        SEPASMB=   USER MUST CODE THE DCB AS A CSECT IF REQUIRED
.STEP19  AIF   (T'&TPMARK EQ 'O').STEP20
*        TPMARK=    THIS IS AN O.S. STANDARD FEATURE  I.E. ALWAYS 'YES'
.STEP20  AIF   (T'&TYPEFLE EQ 'O').STEP21
*        TYPEFLE=   ...,MACRF=(G/P...)
*                   ALSO CODE INPUT OR OUTPUT IN OPEN MACRO
.STEP21  AIF   (T'&NOTEPNT EQ 'O').STEP22
*        NOTEPNT=   ...,MACRF=(RP,WP)
.STEP22  AIF   (T'&VARBLD EQ 'O').STEP23
*        VARBLD=    CODE (L'RECORD+4) IN LRECL FIELD OF DCB
.STEP23  AIF   (T'&WLRERR EQ 'O').STEP24
*        WLRERR=    ...,SYNAD=XXXXXXXX
.STEP24  ANOP
         SPACE 2
         MEND
