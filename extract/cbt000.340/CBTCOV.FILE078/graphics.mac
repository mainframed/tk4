         MACRO
 GRAPHICS &PORRTNS=INCLUDE,&GSP=EXCLUDE
  COPY  SGGBLPAK
  AIF (&SGMENTB(12)).E1                MACRO ENTERED BEFORE
&SGMENTB(12)  SETB  1       SET ENTRY  SWITCH
&SGSUPRB(16) SETB 1 ALLOWS ASYNCHRONOUS EXITS W/O 12*S
&SGSUPRB(17)  SETB  1
    MNOTE *,'      GRAPHICS SUPPORT TO BE INCLUDED'
.A1 AIF (('&PORRTNS' NE 'INCLUDE') AND ('&PORRTNS' NE 'EXCLUDE')).E2
&SGGRPHB(1) SETB ('&PORRTNS' EQ 'INCLUDE')
&SGGRPHB(2)  SETB ('&PORRTNS' EQ 'EXCLUDE')
    MNOTE *,'      PROBLEM ORIENTED ROUTINES ARE TO BE &PORRTNS.D '
.A2 AIF (('&GSP' NE 'INCLUDE') AND ('&GSP' NE 'EXCLUDE')).E3
&SGGRPHB(3) SETB ('&GSP' EQ 'INCLUDE')
&SGGRPHB(4) SETB ('&GSP' EQ 'EXCLUDE')
    MNOTE *,'      GRAPHIC SUBROUTINE PACKAGE IS TO BE &GSP.D '
.A3 MEXIT  ADDITIONAL PARAMETERS TO BE INSERTED HERE
.E1 MNOTE 5,'* * * IEIGPH001 GRAPHICS MACRO PREVIOUSLY SPECIFIED'
&SGQUITB  SETB  1
  AGO .A1
.E2 MNOTE 5,'* * * IEIGPH002 PORRTNS VALUE &PORRTNS INVALID '
&SGQUITB  SETB  1
   AGO  .A2
.E3 MNOTE 5,'* * * IEIGPH003 GSP VALUE &GSP INVALID '
&SGQUITB SETB 1
  AGO  .A3
   MEND
