         MACRO
         SGIPD400
.*  SGIPD400 PRODUCES THE JOB STEP REQUIRED TO LINKEDIT TWO OF THE
.*  FORTRAN SYNTAX CHECKER MODULES -- IPDSN AND IPDER.
         COPY  SGGBLPAK            GET GLOBAL SYMBOLS
&SGCTRLC(7)  SETC   '&SGCTRLC(32)'      VOLUME NUMBER FOR LINKLIB
&SGCTRLC(8)  SETC   '&SGCTRLC(31)'      UNIT NAME FOR LINKLIB
&SGCTRLC(9)  SETC   'LINKLIB'           DATA SET NAME
&SGCTRLC(10) SETC   ',RENT'             PARAMETER FIELD OPTION IN
.*                                        ADDITION TO NCAL,LIST,DC
         COPY  SGLEDPK1
         PUNCH '//FO550 DD DISP=SHR,VOLUME=(,RETAIN),DSNAME=SYS1.FO550'
         COPY  SGLEDPK2
         PUNCH '  INCLUDE FO550(IPDSN,IPDER) '
         PUNCH '  NAME IPDSNEXC(R) '
         PUNCH '/*'
         MEND
