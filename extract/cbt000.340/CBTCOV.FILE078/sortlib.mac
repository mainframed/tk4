         MACRO
         SORTLIB &UNIT=,&VOLNO=
         COPY  SGGBLPAK
         AIF   (NOT &SGMENTB(45)).SORT1
    MNOTE 5,'* * * IEISOL101 SORTLIB MACRO PREVIOUSLY USED'
         AGO  .SOQUIT
.SORT1   ANOP
&SGMENTB(45)   SETB  1
         AIF   (N'&UNIT EQ N'&VOLNO).SORT2
    MNOTE 5,'* * * IEISOL102 UNIT VALUE OR VOLNO VALUE MISSING'
         AGO   .SOQUIT
.SORT2 AIF  ('&UNIT' EQ '').M1
         AIF   (K'&UNIT LE 8).SORT3
    MNOTE 5,'* * * IEISOL103 UNIT VALUE &UNIT INVALID'
&SGQUITB  SETB  1
.SORT3   AIF   (K'&VOLNO LE 6).SORT4
    MNOTE 5,'* * * IEISOL104 VOLNO VALUE &VOLNO INVALID'
         AGO  .SOQUIT
.SORT4   ANOP
&SGCTRLC(19)   SETC   '&UNIT'
&SGCTRLC(20)   SETC   '&VOLNO'
         MEXIT
.M1 MNOTE *,'      SORT LIBRARY WILL RESIDE ON SYSRES'
         MEXIT
.SOQUIT  ANOP
&SGQUITB SETB  1
         MEND
