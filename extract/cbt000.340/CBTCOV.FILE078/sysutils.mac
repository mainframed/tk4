         MACRO
  SYSUTILS  &SIZE=15K
         COPY  SGGBLPAK
         LCLA  &WORK
         LCLC  &C
  AIF  (&SGMENTB(11)).E1
&SGMENTB(11)  SETB  1
    AIF  ('&SIZE'(K'&SIZE,1) NE 'K').A1
&C       SETC  '&SIZE'(1,K'&SIZE-1)
         AIF   ('&C' LT '15').E3
         AIF   ('&C' GT '976').E2
&WORK    SETA  &C
&SGUTSZA SETA   &WORK*1024
         AGO   .A2
.A1  AIF  (T'&SIZE NE 'N').E4
&SGUTSZA SETA  &SIZE
.A2 AIF (&SGUTSZA GT 999424).E2
    AIF (&SGUTSZA LT 15360).E3
    MNOTE *,'      CORE AVAILABLE TO UTILITIES IS &SIZE BYTES'
         MEXIT
.E1 MNOTE 5,'* * * IEISYS001 SYSUTILS WAS PREVIOUSLY ENTERED'
&SGQUITB SETB  1
         MEXIT
.E2 MNOTE 5,'* * * IEISYS002 SIZE VALUE &SIZE INVALID - ''TOO LARGE'''
&SGQUITB SETB  1
         MEXIT
.E3 MNOTE 5,'* * * IEISYS003 SIZE VALUE &SIZE INVALID - ''TOO SMALL'''
&SGQUITB SETB  1
         MEXIT
.E4 MNOTE 5,'* * * IEISYS004 SIZE VALUE &SIZE INVALID '
&SGQUITB SETB  1
         MEND
