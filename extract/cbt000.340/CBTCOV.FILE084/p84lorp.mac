)ATTR DEFAULT(%+_)
    % TYPE(TEXT) INTENS(HIGH) COLOR(WHITE) SKIP(ON)
    Ö TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
    + TYPE(TEXT) INTENS(LOW)  COLOR(TURQ) SKIP(ON)
    _ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED)
    ^ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED) PAD(_)
    | TYPE(INPUT) INTENS(HIGH) CAPS(OFF)
)BODY EXPAND(\\)
+-\-\-Öo.repl    REPLACE line command+-\-\-
%OPTION  ===>|ZCMD
%
+Enter the search/replace strings and operands for%REPLACE  &PDSMEM
%===>|LOPER

+Operands: %  -search-replace-   /  'search' 'replace'
+          %  NUM / SNUM / NONUM / LBLOCK / LDUMP / BLOCK / DUMP
+          %  WRITE/NOWRITE
+          %  CAPS/ASIS
+          %  STATS/NOSTATS
+          %  OFFSET(hex)      MODULE(Partname)
+          %  MAXIN(num)       MAXLEN(num)
+          %  MAXOUT(num)      MAXFIND(num)
+          %  SKIPCOL(num)     SKIPREC(num)
+
+Defaults:  NUM or previous REPLACE/FIND/LIST format; NOWRITE; CAPS; STA
)INIT
  &LOPER  = '&OPERS'
  .CURSOR = LOPER
  .HELP   = P84OPHH
  IF(&LOPER  = &Z) &LOPER=&P84#RP3
)PROC
 &P84#RP3=&LOPER
 &PDSZSEL='Replace  &PDSMEM &LOPER'
)END
