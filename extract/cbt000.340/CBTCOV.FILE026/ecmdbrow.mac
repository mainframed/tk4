)INIT
  .HELP = ISR10000         /* DEFAULT TUTORIAL NAME     */
  .ZVARS = 'ZSCBR'         /* SCROLL AMT VARIABLE NAME  */
  IF (&ZMEMB ^= ' ')
    &ZTITLE = '&ZDSN(&ZMEMB)&ZLEVEL '
  IF (&ZMEMB = ' ')
    &ZTITLE = '&ZDSN&ZLEVEL '
  &MIXED = MIX
  IF (&ZPDMIX = N)         /* EBCDIC MODE REQUESTED     */
    &MIXED = EBCDIC

  /* BRPRINT Support */
  IF (&ZSCREEN = 1)
    &BRDSN1 = &ZDSN  &BRMEM1 = &ZMEMB  &BRVOL1 = &ZVOL
    VPUT (BRDSN1,BRMEM1,BRVOL1)
  IF (&ZSCREEN = 2)
    &BRDSN2 = &ZDSN  &BRMEM2 = &ZMEMB  &BRVOL2 = &ZVOL
    VPUT (BRDSN2,BRMEM2,BRVOL2)
  IF (&ZSCREEN = 3)
    &BRDSN3 = &ZDSN  &BRMEM3 = &ZMEMB  &BRVOL3 = &ZVOL
    VPUT (BRDSN3,BRMEM3,BRVOL3)
  IF (&ZSCREEN = 4)
    &BRDSN4 = &ZDSN  &BRMEM4 = &ZMEMB  &BRVOL4 = &ZVOL
    VPUT (BRDSN4,BRMEM4,BRVOL4)

)REINIT
  REFRESH(ZCMD,ZSCBR,ZDATA,ZLINES,ZCOLUMS)
  .ATTRCHAR(+) = 'INTENS(&ZINTEN)'

)PROC
  &ZCURSOR = .CURSOR
  &ZCSROFF = .CSRPOS
  &ZLVLINE = LVLINE(ZDATA)

  &ECMDEXIT = &ZVERB  IF (&ECMDEXIT = END,RETURN)  VPUT (ECMDEXIT)
)END

