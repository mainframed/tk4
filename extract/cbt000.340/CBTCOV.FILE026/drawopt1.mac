)ATTR DEFAULT(%+_)
       $   TYPE(OUTPUT) INTENS(HIGH)
)BODY
%------------------------------- DRAW OPTIONS --------------------------
%OPTION  ===>_ZCMD
%
%$Z%1+- Select Text Character Set          %4+- Copy Text CS to User CS
%$Z%2+- Select Non-Text Character Set      %5+- Copy Non-Text CS to User
%$Z%3+- Select User Character Set
%
%User Character Set Definitions:+(Examples: '.', '*', X'AF')
+
+ Point Character    %===>_DRA3PT  +    Fill Character       %===>_DRA3F
+ Horizontal Line    %===>_DRA3LNH +    Vertical Line        %===>_DRA3L
+ Up Arrow           %===>_DRA3ARU +    Down Arrow           %===>_DRA3A
+ Left Arrow         %===>_DRA3ARL +    Right Arrow          %===>_DRA3A
+ Top Horizontal Box %===>_DRA3BXHT+    Bottom Horizontal Box%===>_DRA3B
+ Left Vertical Box  %===>_DRA3BXVL+    Right Vertical Box   %===>_DRA3B
+ Upper Left Box     %===>_DRA3BXUL+    Upper Right Box      %===>_DRA3B
+ Lower Left Box     %===>_DRA3BXLL+    Lower Right Box      %===>_DRA3B
)INIT
  .HELP = DRAW0200
  .ZVARS = '(CSET1ON CSET2ON CSET3ON)'
  .CURSOR = ZCMD
  &DRA1PT   = 'X"AF"'
  &DRA1FILL = 'X"8F"'
  &DRA1LNH  = 'X"BF"'
  &DRA1LNV  = 'X"FA"'
  &DRA1ARU  = 'X"8A"'
  &DRA1ARD  = 'X"59"'
  &DRA1ARL  = 'X"DE"'
  &DRA1ARR  = 'X"DF"'
  &DRA1BXHT = 'X"BF"'
  &DRA1BXHB = 'X"BF"'
  &DRA1BXVL = 'X"FA"'
  &DRA1BXVR = 'X"FA"'
  &DRA1BXUL = 'X"AC"'
  &DRA1BXUR = 'X"BC"'
  &DRA1BXLL = 'X"AB"'
  &DRA1BXLR = 'X"BB"'
  &DRA2PT   = '"+"'
  &DRA2FILL = '"X"'
  &DRA2LNH  = '"-"'
  &DRA2LNV  = '"×"'
  &DRA2ARU  = '"A"'
  &DRA2ARD  = '"V"'
  &DRA2ARL  = '"<"'
  &DRA2ARR  = '">"'
  &DRA2BXHT = '"-"'
  &DRA2BXHB = '"-"'
  &DRA2BXVL = '"×"'
  &DRA2BXVR = '"×"'
  &DRA2BXUL = '"+"'
  &DRA2BXUR = '"+"'
  &DRA2BXLL = '"+"'
  &DRA2BXLR = '"+"'
  &CSET1ON = ' '
  &CSET2ON = ' '
  &CSET3ON = ' '
  IF (&DRAWCSET = '1')
    &CSET1ON = '*'
  IF (&DRAWCSET = '2')
    &CSET2ON = '*'
  IF (&DRAWCSET = '3')
    &CSET3ON = '*'
)REINIT
  REFRESH(*)
)PROC
  VER(&ZCMD,NONBLANK,LIST,1,2,3,4,5)
  IF (&ZCMD = '1')
    &DRAWCSET = '1'
    &DRAWPT   = &DRA1PT
    &DRAWFILL = &DRA1FILL
    &DRAWLNH  = &DRA1LNH
    &DRAWLNV  = &DRA1LNV
    &DRAWARU  = &DRA1ARU
    &DRAWARD  = &DRA1ARD
    &DRAWARL  = &DRA1ARL
    &DRAWARR  = &DRA1ARR
    &DRAWBXHT = &DRA1BXHT
    &DRAWBXHB = &DRA1BXHB
    &DRAWBXVL = &DRA1BXVL
    &DRAWBXVR = &DRA1BXVR
    &DRAWBXUL = &DRA1BXUL
    &DRAWBXUR = &DRA1BXUR
    &DRAWBXLL = &DRA1BXLL
    &DRAWBXLR = &DRA1BXLR
  IF (&ZCMD = '2')
    &DRAWCSET = '2'
    &DRAWPT   = &DRA2PT
    &DRAWFILL = &DRA2FILL
    &DRAWLNH  = &DRA2LNH
    &DRAWLNV  = &DRA2LNV
    &DRAWARU  = &DRA2ARU
    &DRAWARD  = &DRA2ARD
    &DRAWARL  = &DRA2ARL
    &DRAWARR  = &DRA2ARR
    &DRAWBXHT = &DRA2BXHT
    &DRAWBXHB = &DRA2BXHB
    &DRAWBXVL = &DRA2BXVL
    &DRAWBXVR = &DRA2BXVR
    &DRAWBXUL = &DRA2BXUL
    &DRAWBXUR = &DRA2BXUR
    &DRAWBXLL = &DRA2BXLL
    &DRAWBXLR = &DRA2BXLR
  IF (&ZCMD = '3')
    VER (&DRA3PT,NONBLANK,MSG=DRAW026)
    VER (&DRA3FILL,NONBLANK,MSG=DRAW026)
    VER (&DRA3LNH,NONBLANK,MSG=DRAW026)
    VER (&DRA3LNV,NONBLANK,MSG=DRAW026)
    VER (&DRA3ARU,NONBLANK,MSG=DRAW026)
    VER (&DRA3ARD,NONBLANK,MSG=DRAW026)
    VER (&DRA3ARL,NONBLANK,MSG=DRAW026)
    VER (&DRA3ARR,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXHT,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXHB,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXVL,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXVR,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXUL,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXUR,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXLL,NONBLANK,MSG=DRAW026)
    VER (&DRA3BXLR,NONBLANK,MSG=DRAW026)
    &DRAWCSET = '3'
    &DRAWPT   = &DRA3PT
    &DRAWFILL = &DRA3FILL
    &DRAWLNH  = &DRA3LNH
    &DRAWLNV  = &DRA3LNV
    &DRAWARU  = &DRA3ARU
    &DRAWARD  = &DRA3ARD
    &DRAWARL  = &DRA3ARL
    &DRAWARR  = &DRA3ARR
    &DRAWBXHT = &DRA3BXHT
    &DRAWBXHB = &DRA3BXHB
    &DRAWBXVL = &DRA3BXVL
    &DRAWBXVR = &DRA3BXVR
    &DRAWBXUL = &DRA3BXUL
    &DRAWBXUR = &DRA3BXUR
    &DRAWBXLL = &DRA3BXLL
    &DRAWBXLR = &DRA3BXLR
    VPUT (DRA3PT DRA3FILL DRA3LNH DRA3LNV DRA3ARU DRA3ARD DRA3ARL DRA3AR
          DRA3BXHT DRA3BXHB DRA3BXVL DRA3BXVR DRA3BXUL DRA3BXUR DRA3BXLL
          DRA3BXLR) PROFILE
  IF (&ZCMD = '4')
    &DRA3PT   = &DRA1PT
    &DRA3FILL = &DRA1FILL
    &DRA3LNH  = &DRA1LNH
    &DRA3LNV  = &DRA1LNV
    &DRA3ARU  = &DRA1ARU
    &DRA3ARD  = &DRA1ARD
    &DRA3ARL  = &DRA1ARL
    &DRA3ARR  = &DRA1ARR
    &DRA3BXHT = &DRA1BXHT
    &DRA3BXHB = &DRA1BXHB
    &DRA3BXVL = &DRA1BXVL
    &DRA3BXVR = &DRA1BXVR
    &DRA3BXUL = &DRA1BXUL
    &DRA3BXUR = &DRA1BXUR
    &DRA3BXLL = &DRA1BXLL
    &DRA3BXLR = &DRA1BXLR
    &ZCMD = ' '
    .MSG = DRAW013
  IF (&ZCMD = '5')
    &DRA3PT   = &DRA2PT
    &DRA3FILL = &DRA2FILL
    &DRA3LNH  = &DRA2LNH
    &DRA3LNV  = &DRA2LNV
    &DRA3ARU  = &DRA2ARU
    &DRA3ARD  = &DRA2ARD
    &DRA3ARL  = &DRA2ARL
    &DRA3ARR  = &DRA2ARR
    &DRA3BXHT = &DRA2BXHT
    &DRA3BXHB = &DRA2BXHB
    &DRA3BXVL = &DRA2BXVL
    &DRA3BXVR = &DRA2BXVR
    &DRA3BXUL = &DRA2BXUL
    &DRA3BXUR = &DRA2BXUR
    &DRA3BXLL = &DRA2BXLL
    &DRA3BXLR = &DRA2BXLR
    &ZCMD = ' '
    .MSG = DRAW014
  VPUT (DRAWPT DRAWFILL DRAWLNH DRAWLNV DRAWARU DRAWARD DRAWARL DRAWARR
        DRAWBXHT DRAWBXHB DRAWBXVL DRAWBXVR DRAWBXUL DRAWBXUR DRAWBXLL
        DRAWBXLR DRAWCSET) PROFILE
)END
