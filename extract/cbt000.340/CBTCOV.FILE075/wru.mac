         MACRO
         WRU
         GBLB  &BWTTA,&WRUHDR,&WRUEND
         GBLB  &RCV,&SEN,&SHDR
         GBLC  &MGTP
         AIF   (&BWTTA).OK1
         MNOTE 12,'***   IHB030 LPS MACRO WRU IMPROPERLY USED.'
         MEXIT
.OK1     AIF   (&RCV AND NOT &SEN).NOTOK
         AIF   (&SHDR OR '&MGTP' EQ 'E').OK2
.NOTOK   MNOTE 12,'***  IHB070  SEQUENCE ERROR-MUST FOLLOW SENDHDR OR  X
               ENDSEND MACRO '
         MEXIT
.OK2     AIF   (&SHDR).SHDR
&WRUEND  SETB  1
         AGO   .END
.SHDR    ANOP
&WRUHDR  SETB  1
.END     MEND
