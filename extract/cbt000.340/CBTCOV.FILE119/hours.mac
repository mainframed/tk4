      SUBROUTINE HOURS
C
C  ANNOUNCE THE CURRENT HOURS WHEN THE CAVE IS OPEN FOR ADVENTURING.
C  THIS INFO IS STORED IN WKDAY, WKEND, AND HOLID, WHERE BIT SHIFT(1,N)
C  IS ON IFF THE HOUR FROM N:00 TO N:59 IS "PRIME TIME" (CAVE CLOSED).
C  WKDAY IS FOR WEEKDAYS, WKEND FOR WEEKENDS, HOLID FOR HOLIDAYS.  NEXT
C  HOLIDAY IS FROM HBEGIN TO HEND.
C
      IMPLICIT INTEGER(A-Z)
      COMMON /WIZCOM/ WKDAY,WKEND,HOLID,HBEGIN,HEND,HNAME,
     1SHORT,MAGIC,MAGNM,LATNCY,SAVED,SAVET,SETUP
      COMMON /IOSCOM/ TTYI,TTYO,BLKLIN,DBFI,DBINIT,DBSAVE
      DIMENSION HNAME(20),VAL(5)
      DATA SCOM/'S,'/,COMBLK/', '/
C
      WRITE(TTYO,1)
1     FORMAT(' ')
      CALL HOURSX(WKDAY,1)
      CALL HOURSX(WKEND,2)
      CALL HOURSX(HOLID,3)
      CALL DATIME(D,T)
      IF(HEND.LT.D.OR.HEND.LT.HBEGIN)RETURN
      IF(HBEGIN.GT.D)GOTO 10
      WRITE(TTYO,5)HNAME
5     FORMAT(/,' TODAY IS A HOLIDAY, NAMELY ',20A1)
      RETURN
10    D=HBEGIN-D
      T=SCOM
      IF(D.EQ.1)T=COMBLK
      WRITE(TTYO,15)D,T,HNAME
15    FORMAT(/,' THE NEXT HOLIDAY WILL BE IN',I3,' DAY',A2,
     1' NAMELY ',20A1)
      RETURN
      END
