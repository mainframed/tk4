      SUBROUTINE SPEAK(N)
C
C  PRINT THE MESSAGE WHICH STARTS AT LINES(N).  PRECEDE IT WITH A BLANK
C  LINE UNLESS BLKLIN IS FALSE.
C
      IMPLICIT INTEGER(A-Z)
      LOGICAL BLKLIN
      COMMON /TXTCOM/ RTEXT,LINES
      COMMON /IOSCOM/ TTYI,TTYO,BLKLIN,DBFI,DBINIT,DBSAVE
      DIMENSION RTEXT(205),LINES(9800),TEXT(70)
      DATA BLANK/' '/
C
      IF(N.EQ.0)RETURN
      IF(LINES(N+1).EQ.CODE1('>$<  '))RETURN
      IF(BLKLIN)WRITE(TTYO,1)
1     FORMAT(1X)
      K=N
10    NWORDS=IABS(LINES(K))-K-1
      IF(NWORDS.EQ.0)GOTO 40
      NCHARS=5*NWORDS
      DO 15 I=1,NWORDS
         LIDX=K+I
         TIDX=5*(I-1)+1
         CALL DCODE1(LINES(LIDX),TEXT(TIDX))
15    CONTINUE
      WRITE(TTYO,20)(TEXT(I),I=1,NCHARS)
20    FORMAT(1X,70A1)
30    K=IABS(LINES(K))
      IF(LINES(K).GE.0)GOTO 10
      RETURN
40    WRITE(TTYO,1)
      GOTO 30
      END
