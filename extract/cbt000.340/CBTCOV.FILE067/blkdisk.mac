PROC 0 DEBUG
IF &DEBUG = DEBUG THEN CONTROL LIST CONLIST SYMLIST NOFLUSH PROMPT MSG
                  ELSE CONTROL NOLIST NOCONLIST NOSYMLIST FLUSH        -
NOPROMPT NOMSG
ISPEXEC VGET BLKOPT
CONTROL NOMSG
DELETE BLKDISK.REPORT
FREE F(REPORT)
CONTROL MSG
ALLOC F(REPORT) DS(BLKDISK.REPORT) NEW SPA(1,1) T

   SET &HOLD = &SYSSCAN
     SET &SYSSCAN = 1
       &BLKOPT
          SET &SYSSCAN = &HOLD

FREE F(REPORT)
%GENPRINT DSN(BLKDISK.REPORT)
