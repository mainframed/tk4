PROC 0
SET FLAG = 0
SET &EXIT = NO
PROLOGUE: +
      ISPEXEC DISPLAY PANEL(BLKOPT30)
      IF &EXIT = YES THEN END
          SET &RBLK  = &BLKSIZE / &REC
          SET &BLKCNT = (&MAXREC + (&RBLK - 1)) / &RBLK
OPTIMUM: +
       SET &OBLKSIZE = &GOODBLK / &REC * &REC
          SET &ORBLK = &OBLKSIZE / &REC
          SET &OBLKCNT = (&MAXREC + (&ORBLK - 1)) / &ORBLK
      GOTO PROLOGUE
      END
