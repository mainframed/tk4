HEXPUT   TITLE 'DISPLAY HEX DATA IN CHARACTER FORMAT'
HEXPUT   BEGIN PARM=R1
         USING PARMLIST,R1
         LA    R5,HEXFLD
         LA    R6,OUTPUT
         MVC   BYTE1,0(R5)
         UNPK  CL3,PL2
         TR    CL3,TRTAB
         MVC   0(2,R6),CL3
         EXIT  RC=0
         LTORG
         REGISTER
         DS    0D
PL2      DS    0PL2
BYTE1    DC    XL1'00'
BYTE2    DC    XL1'0F'
CL3      DS    CL3
TRTAB    DC    XL256'00'                TRANSLATE TABLE
         ORG   TRTAB+X'F0'              ORG TO CHARACTER POSITIONS
         DC    CL16'0123456789ABCDEF'   TRANSLATE VALUES FOR HEX CHARS.
         ORG   TRTAB+256                RESET LOCATION COUNTER
PARMLIST DSECT
HEXFLD   DC    XL1'00'                  FIELD TO BE CONVERTED
OUTPUT   DC    CL2' '                   OUTPUT AREA FOR CONVERTED DATA
         END   HEXPUT
