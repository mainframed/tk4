         MACRO
&LABEL   $WCC &OPT
.**********************************************************************
.*
.*  THIS MACRO IS USED IN MAPPING TPUT FULL SCREEN OUTPUT. IT
.*  DEFINES A SCREEN START AND THE WRITE COMMAND CHARACTER FOR
.*  THE SCREEN.
.*
.*  LABEL  $WCC (PRINTER,ALARM,LOCK,MDT)
.*
.**********************************************************************
         LCLA  &CNTR
         LCLC  &PRINTER,&ALARM,&LOCK,&MDT
&CNTR    SETA   1
&PRINTER SETC  '0'
&ALARM   SETC  '0'
&LOCK    SETC  '1'
&MDT     SETC  '0'
.*
.LOOP    AIF   (&CNTR GT N'&OPT).CONT
         AIF   ('&OPT(&CNTR)' NE 'PRINTER').NPRINT
&PRINTER SETC  '1'
         AGO   .LOOPEND
.NPRINT  AIF   ('&OPT(&CNTR)' NE 'MDT').NMDT
&MDT     SETC  '1'
         AGO   .LOOPEND
.NMDT    AIF   ('&OPT(&CNTR)' NE 'ALARM').NALARM
&ALARM   SETC  '1'
         AGO   .LOOPEND
.NALARM  AIF   ('&OPT(&CNTR)' NE 'LOCK').ERR2
&LOCK    SETC  '0'
.LOOPEND ANOP
&CNTR    SETA  &CNTR+1
         AGO   .LOOP
.CONT    ANOP
&LABEL   DC    BL1'1100&PRINTER.&ALARM.&LOCK.&MDT.'
         AGO   .MACEND
.ERR1    MNOTE 8,'$WCC MACRO USED WITH TOO MANY OPERANDS'
         AGO   .MACEND
.ERR2    MNOTE 8,'INVALID MACRO OPERAND - &OPT(&CNTR)'
.MACEND  ANOP
         MEND
         AIF   (N'&OPT GT 5).ERR1
.ERR1    MNOTE 8,'$WCC - MACRO USED WITH TOO MANY OPERANDS'
         AGO   .MACEND
.ERR2    MNOTE 8,'$WCC - OPERAND INVALID - &OPT(1)'
         AGO   .MACEND
.ERR3    MNOTE 8,'$WCC - FIRST OPERAND INVALID - &OPT(1)'
         AGO   .MACEND
.ERR4    MNOTE 8,'$WCC - SECOND OPERAND INVALID - &OPT(2)'
.MACEND  ANOP
         MEND
