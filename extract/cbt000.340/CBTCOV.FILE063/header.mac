         MACRO
&LABEL   HEADER &FILE,&LEN=121
         AIF   ('&LABEL' EQ '').CONT1
&LABEL   DS    0H
.CONT1   AIF   ('&FILE' EQ '').ERR1
         PUT   &FILE,HED&SYSNDX.1
         B     HED&SYSNDX.2
HED&SYSNDX.1 DS 0CL&LEN
         DC    CL020'1 PROGRAM: &SYSECT,'
         DC    CL020' FILENAME: &FILE,'
         DC    CL020' MOD DATE:&SYSDATE,'
         DC    CL020' MOD TIME:&SYSTIME '
SZ&SYSNDX    EQU   &LEN-80
         DC    CL(SZ&SYSNDX)' '
         AGO   .END
.ERR1    MNOTE 8,'*** OUTPUT FILE NOT SPECIFIED, THIS IS REQUIRED ***'
         MEXIT
.END     ANOP
HED&SYSNDX.2 DS 0H
         MEND
