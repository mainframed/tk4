)ATTR DEFAULT(%+_)
    % TYPE(TEXT) INTENS(HIGH) COLOR(WHITE) SKIP(ON)
    Ö TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
    + TYPE(TEXT) INTENS(LOW)  COLOR(TURQ) SKIP(ON)
    _ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED)
    ^ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED) PAD(_)
    | TYPE(INPUT) INTENS(HIGH) CAPS(OFF)
)BODY EXPAND(\\)
+-\-\-ÖPDS Dialog Features and Short Hand Commands+-\-\-
%OPTION  ===>_ZCMD
+
 Choose one of the following:
    %1 +- Suspend ISPF (revert to line mode)
    %R     +- Recall a previous command
    %SETALT+- Recall and save a previous command for latter use
    %ALTCMD+- Execute a previous command saved by SETALT
    %8     +- View the log
)INIT
 .HELP = P85OP@PH
)PROC
 &PDSZSEL=TRUNC(&ZCMD,'.')
 IF (&PDSZSEL='*')
    &PDSZSEL=&ZCMD
 IF (&PDSZSEL^='*')
     &PDSZSEL=TRANS(&PDSZSEL
              1,'1'
              8,'&ZCMD'
              R,'&ZCMD'
         SETALT,'&ZCMD'
          SETAL,'&ZCMD'
           SETA,'&ZCMD'
         ALTCMD,'&ZCMD'
           ' ',' '
             *,'?')
 &ZTRAIL=.TRAIL
 &OPERS=.TRAIL
)END
