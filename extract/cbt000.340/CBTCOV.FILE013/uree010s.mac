*        **************************************
*        *                                    *
*        *         ==> D A T E  1 <==         *
*        *                                    *
*        *     DATUMS-KONVERTIERUNG           *
*        *     TTMMJJ ===> JJTTT              *
*        *                                    *
*        **************************************
         SPACE
DATE1    EQU   *
         UNPK  CHECKFLD,PARAM2
         OI    CHECKFLD+6,X'F0'
         PACK  PDATE,CHECKFLD+1(2)
         CP    PDATE,=P'31'
         BH    PARAMERR
         PACK  PMONTH,CHECKFLD+3(2)
         CP    PMONTH,=P'12'
         BH    PARAMERR
         CLC   CHECKFLD+5(2),=C'00'
         BE    NSCHALT1
         PACK  RFELD,CHECKFLD+5(2)
         DP    RFELD,=P'4'
         CP    RFELD+2(1),=P'0'
         BNE   NSCHALT3
         MVI   MONTAB+3,X'9C'
         B     NSCHALT1
         SPACE
NSCHALT3 EQU   *
         MVI   MONTAB+3,X'8C'
         SPACE
NSCHALT1 EQU   *
         PACK  PMONAT,=C'0'
         PACK  PTAG,=C'0'
         LA    R6,MONTAB
         SPACE
NEWMONTH EQU   *
         AP    PMONAT,=P'1'
         CP    PMONAT,PMONTH
         BE    MONTHFND
         AP    PTAG,0(2,R6)
         LA    R6,2(R6)
         B     NEWMONTH
         SPACE
MONTHFND EQU   *
         AP    PTAG,PDATE
         MVC   OUTFIELD(2),CHECKFLD+5
         UNPK  OUTFIELD+2(3),PTAG
         OI    OUTFIELD+4,X'F0'
         PACK  PARAM2,OUTFIELD
         BR    R4
         EJECT
*        **************************************
*        *                                    *
*        *         ==> D A T E  2 <==         *
*        *                                    *
*        *     DATUMS-KONVERTIERUNG           *
*        *     JJTTT ===> TTMMJJ              *
*        *                                    *
*        **************************************
         SPACE
DATE2    EQU   *
         UNPK  CHECKFLD,PARAM2
         OI    CHECKFLD+6,X'F0'
         CLC   CHECKFLD(2),=C'00'
         BNE   PARAMERR
         PACK  PJAHR,CHECKFLD+2(2)
         PACK  PTAG,CHECKFLD+4(3)
         CP    PJAHR,=P'00'
         BE    NSCHALT2
         ZAP   RFELD,PJAHR
         DP    RFELD,=P'4'
         CP    RFELD+2(1),=P'0'
         BNE   NSCHALT2
         MVI   MONTAB+3,X'9C'
         CP    PTAG,=P'366'
         BH    PARAMERR
         B     NSCHALT
         SPACE
NSCHALT2 EQU   *
         CP    PTAG,=P'365'
         BH    PARAMERR
         MVI   MONTAB+3,X'8C'
         SPACE
NSCHALT  EQU   *
         PACK  PMONAT,=C'0'
         PACK  PDATE,=C'0'
         LA    R6,MONTAB
         ZAP   PDATE,PTAG
COMP     EQU   *
         CP    PDATE,0(2,R6)
         BNH   COMPEND
         SP    PDATE,0(2,R6)
         AP    PMONAT,=P'1'
         LA    R6,2(R6)
         B     COMP
         SPACE
COMPEND  EQU   *
         AP    PMONAT,=P'1'
         UNPK  OUTFLD(2),PDATE
         OI    OUTFLD+1,X'F0'
