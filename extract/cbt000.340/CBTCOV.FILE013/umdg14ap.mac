-SPLSTOP:
          PROC OPTIONS (MAIN);
-         DCL  WORK      CHAR (160);
-         DCL  WORK1     CHAR (80);
-         DCL  PIN       POINTER;
-         DCL  PCATA     POINTER;
-         DCL  XDATE     CHAR (8);
-         DCL  XPAGE     PIC'999' INIT (0) STATIC;
-         DCL  DIN       CHAR (1);
-         DCL  GSCHL     CHAR (16);
-         DCL  DATE      BUILTIN;
-         DCL  CATA      FILE RECORD KEYED ENV (INDEXED);
-         DCL 1  STRUC   BASED (PCATA),
               2 FREI1   CHAR (90),
               2 STALL   CHAR (1),
               2 STUPD   CHAR (1),
               2 FREI2   CHAR (68);
-         DCL 1  STRUI   BASED (PIN),
               2 DOLLAR  CHAR (3),
               2 SCHL    CHAR (8),
               2 KOMMA   CHAR (1),
               2 INALL   CHAR (1),
               2 INUPD   CHAR (1),
               2 SEMI    CHAR (1);
-         ON ENDFILE (SYSPRINT) BEGIN;
                             DIN = '';
                             END;
-         ON ENDPAGE (SYSPRINT) BEGIN;
                                CALL U10;
                                END;
-         PIN = ADDR (WORK1);
          PCATA = ADDR (WORK);
          OPEN FILE (SYSPRINT) STREAM LINESIZE(132);
          OPEN FILE (CATA) DIRECT UPDATE;
          DIN = '*';
          XDATE = SUBSTR (DATE,5,2) ××'/' ××
                  SUBSTR (DATE,3,2) ×× '/' ××
                  SUBSTR (DATE,1,2);
          CALL U10;
          DO WHILE (DIN = '*');
          GSCHL = '00000000' ×× SCHL;
          READ FILE (CATA) INTO (WORK) KEY (GSCHL);
          STALL = INALL;
          STUPD = INUPD;
          REWRITE FILE (CATA) FROM (WORK) KEY (GSCHL);
          PUT FILE (SYSPRINT) SKIP (2) EDIT
          (SCHL,INALL,INUPD) (X(20),A,X(10),A,X(10),A);
          GET EDIT (WORK1) (A(80));
          END;
          CLOSE FILE (CATA);
