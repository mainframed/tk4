-SPLIU:
          PROC OPTIONS (MAIN);
-         DCL  WORK      CHAR (160);
-         DCL  WORK1     CHAR (80);
-         DCL  SCHL      CHAR (16);
-         DCL  DOIN      CHAR (1) INIT ('J');
-         DCL  ZAEHL     PIC'99'  INIT (0);
-         DCL  M         CHAR (1) INIT ('*');
-         DCL  ONCODE    BUILTIN;
-         DCL  P1        POINTER;
-         DCL  P2        POINTER;
-         DCL 1  STRIN   BASED (P1),
               2 DOLLAR  CHAR (3),
               2 NAME    CHAR (16),
               2 REST    CHAR (61);
-         DCL 1  STRCATA      BASED (P2),
               2 FREI         CHAR (77),
               2 XARCH             CHAR (3),
               2 FREI1             CHAR (44),
               2 XANZ         CHAR (5);
          DCL  CATA FILE RECORD KEYED ENV (INDEXED);
          ON KEY (CATA) BEGIN;
                        IF ONCODE = 51 THEN DO;
                                       M = ' ';
                                       END;
                                             ELSE SIGNAL ERROR;
                        END;
-         ON ENDFILE (SYSIN) BEGIN;
                             DOIN = ' ';
                             END;
          P1 = ADDR (WORK1);
          P2 = ADDR (WORK);
1ANF:
          OPEN FILE (CATA) DIRECT UPDATE;
          GET EDIT (WORK1) (A(80));
          ZAEHL = ZAEHL + 1;
          DO WHILE (DOIN = 'J'); /* DO 1 */
          IF DOLLAR ^= '$$$' THEN DO; /* DO 2 */
                             PUT SKIP EDIT
                             ('***** ',ZAEHL,' STEUERKARTE FALSCH'××
                              ' *****') (X(30),A,A,A);
                             END; /* END DD 2 */
            ELSE DO; /* ELSE 1 */
            SCHL = NAME;
            READ FILE (CATA) INTO (WORK) KEY (SCHL);
            IF M = ' ' THEN DO; /* DO 3 */
                       PUT SKIP EDIT
                       ('***** DEN SATZ MIT DEM SCHLUESSEL ',SCHL,
                        ' GIBT ES NICHT *****') (X(15),A,A,A);
                       M      =    '*';
                       END; /* END DO 3 */
         ELSE DO; /* ELSE 2 */
              XANZ  = '';
              REWRITE FILE (CATA) FROM (WORK) KEY (SCHL);
              END; /* END ELSE 2 */
            END; /* END ELSE 1 */
          GET EDIT (WORK1) (A(80));
          ZAEHL = ZAEHL + 1;
          END; /* END DO 1 */
          CLOSE FILE (CATA);
          END SPLIU;
