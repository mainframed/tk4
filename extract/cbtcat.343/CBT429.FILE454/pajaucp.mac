)ATTR
@ TYPE(OUTPUT) INTENS(LOW)
)BODY
%SPECIAL - Command authorization interface -----------------------------
+Command%===>_RCMD


+                                                             %SCROLL ==
%Set authorization :_RAUT+(OFF/ON)
+=======================================================================
)MODEL
@Z
)INIT
  .ZVARS = '(XY)'
  .HELP = PAJTAUCP
  .CURSOR = RCMD
  IF (&AMT = &Z)
    &AMT = PAGE
  &RAUT = TRANS (&RAUT ' ',OFF *,*)
  &ZTDMARK = '=================================== Bottom +
              ==================================='
)PROC
  VER (&RCMD,NONBLANK)
  &CHKC = TRUNC (&RCMD,' ')
  IF (&CHKC = 'F')
    &RCMD = TRUNC (&RCMD,' ')
    &CHCK = .TRAIL
    IF (&CHCK = &Z)
      VER (&FCMD,NONBLANK)
    IF (&CHCK ^= &Z)
      &FCMD = &CHCK
  &RAUT = TRUNC (&RAUT,2)
  &RAUT = TRANS (&RAUT ON,ON OF,OFF *,*)
  VER (&RAUT,NONBLANK)  VER (&RAUT,LIST,ON,OFF)
)END
