        Then
         Leap = 'TRUE'
       If Leap = 'TRUE' & julian >= 60 then
        Do
          Month.2 = X0312902FEBRUARY
          Date = julian  - (substr(month.i,2,3) + 1)
          Dated = substr(month.i,5,2) - date
          Date = substr(month.i,5,2) - dated
          If julian = 60  then
           Do
              Months = 02
              Date = 29
           End
        End
