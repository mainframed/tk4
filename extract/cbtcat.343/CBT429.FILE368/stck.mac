STCK     TITLE 'STCK - INVOKE STORE CLOCK INSTRUCTION TO TEST Y2K'
R0       EQU   0        *USED BY O.S.
R1       EQU   1        *USED BY O.S. // ADDRESS OF PARAMETER LIST
R2       EQU   2
R3       EQU   3
R4       EQU   4
R5       EQU   5
R6       EQU   6
R7       EQU   7
R8       EQU   8
R9       EQU   9
R10      EQU   10
R11      EQU   11
R12      EQU   12
R13      EQU   13       *USED BY O.S. // SAVE-AREA ADDRESS
R14      EQU   14       *USED BY O.S. // RETURN ADDRESS
R15      EQU   15       *USED BY O.S. // ENTRY-PT ADDR, RETURN CODE
STCK     CSECT
         SAVE  (14,12),,STCK..&SYSDATC
         BALR  R12,0               INIT BASE
         USING *,R12               ADDRESS
         ST    R13,SAVE+4          SAVE OLD SAVE
         LA    R13,SAVE            COPY IN NEW SAVE
STCKPCHK DS    0H
         LR    R11,R1              PTR PARM ADDR - FIRST COMMAND
         L     R11,0(R11)          SAVE ADDR OF PARM IN R11
         LH    R2,0(R11)           LENGTH TO R2
         C     R2,=F'0'            PARM LENGTH = 0?
         BE    STORCLOK            YES, ISSUE STCK
         MVC   TODCLOCK(8),2(R11)  MOVE PARM TO WORK AREA
         B     STCKCONV
STORCLOK STCK TODCLOCK
STCKCONV STCKCONV STCKVAL=TODCLOCK,CONVVAL=OUTVAL,TIMETYPE=DEC,        X
               DATETYPE=MMDDYYYY
STCKCON2 DS 0H
         LM    R2,R3,OUTVAL+8
         SRDL  R2,28
         LA    R4,X'0F'        ; SET SIGN BIT
         OR    R3,R4
         STM   R2,R3,TODCLOCK
         UNPK  OUTVAL+8(8),TODCLOCK+3(5)
         MVC   OUTDATE(8),OUTVAL+8
         MVC   CONSOL+16(8),OUTDATE     WRITE TO CONSOLE
         LM    R2,R3,OUTVAL      LOAD TIME IN GMT
         SRL   R2,12             MOVE DATE OVER
         LA    R3,X'0F'        ; SET SIGN BIT
         OR    R2,R3
         STM   R2,R3,TODCLOCK
         UNPK  OUTVAL(4),TODCLOCK(4)
         MVC   OUTTIME(4),OUTVAL
         MVC   CONSOL+26(4),OUTTIME     WRITE TO CONSOLE
CONSOL   WTO 'STCKCON XXXXXXXX  XXXX    GMTTIME    ',ROUTCDE=(2,11)
EXIT     DS 0H
         L     R13,SAVE+4          RELOAD OLD SAVE
         RETURN (14,12),RC=0
         EJECT
*ODCLOCK DS 2F        TOD CLOCK VALUE
TODCLOCK DS CL8       TOD CLOCK VALUE
XODCLOCK DS CL8       TOD CLOCK VALUE
*ODCLOCK DC X'A0569832F1241000'
OUTDATE  DS CL8
OUTTIME  DS CL4
OUTVAL   DS 4F        CONVERTED VALUE
SAVE     DS 18F
         LTORG
         END
