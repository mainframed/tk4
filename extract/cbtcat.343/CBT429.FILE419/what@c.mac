#include <errno.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <ctype.h>

static int sflag;
static int found;

void search __P((void));

/*
 * what
 */
int
main(argc, argv)
	int argc;
	char **argv;
{
	int c;

	while ((c = getopt(argc, argv, "s")) != -1)
		switch (c) {
		case 's':
			sflag = 1;
			break;
		default:
			(void)fprintf(stderr,
			    "usage: what [-s] file ...\n");
			exit(1);
		}
	argv += optind;

	if (!*argv)
		search();
	else do {
		if (!freopen(*argv, "rb", stdin)) {
			fprintf(stderr, "what: %s: %s\n", *argv,
					strerror(errno));
		} else {
			printf("%s:\n", *argv);
			search();
		}
	} while(*++argv);
	exit(!found);
}

void
search()
{
	register int c;

	while ((c = getchar()) != EOF) {
loop:		if (c != '@')
			continue;
		if ((c = getchar()) != '(')
			goto loop;
		if ((c = getchar()) != '#')
			goto loop;
		if ((c = getchar()) != ')')
			goto loop;
		printf("        ");
		while ((c = getchar()) != EOF && c && c != '"' &&
		    c != '>' && c != '\\' && c != '\n') {
		    if(isprint(c)) {
			putchar(c);
		    } else {
			putchar('.');
		    }
		}
		putchar('\n');
		found = 1;
		if (sflag)
			return;
	}
}
