Trace "Off"
"NEWSTACK"
Address ISPEXEC
"TBCREATE RSHOWTSO NAMES(ID VALUE) NOWRITE REPLACE"

/***********************************************************************
* Obtain data via SHOWREXX function                                    *
***********************************************************************/
Id = copies("*",8)
Value = right(center(" Information from SHOW ",80,"*"),70)
"TBADD RSHOWTSO MULT(125)"

Queue "ACCT"
Queue "ACCTNO"
Queue "ACCTNO#"
Queue "ACF2ACCT"
Queue "BCPFMID"
Queue "BCPLEVEL"
Queue "CENTER"
Queue "COMPMAIL"
Queue "CPU"
Queue "CPUMODEL"
Queue "CPUSER"
Queue "CPUVER"
Queue "CRTCD"
Queue "DEPT"
Queue "DEST"
Queue "DFPLEVEL"
Queue "FDS"
Queue "FDS#"
Queue "FRAMES"
Queue "GROUP"
Queue "GRP"
Queue "HOMEDIV"
Queue "JOBFUNC"
Queue "JOBNAME"
Queue "LINES"
Queue "LOC"
Queue "MAIL"
Queue "NAME"
Queue "OPSYS"
Queue "OS"
Queue "OSLEV"
Queue "OSREL"
Queue "PHONE"
Queue "REFERVOL"
Queue "SHOWLEV"
Queue "SYSNAME"
Queue "TERMINAL"
Queue "TSOOPER"
Queue "TSOUNIT"
Queue "UID"
Queue "USERID"

Do queued()
   Parse pull id .
   Value = showrexx(id)
