ISREDIT MACRO (NUMO NUMC)
CONTROL NOMSG NOLIST NOCONLIST NOSYMLIST NOFLUSH NOPROMPT
ISREDIT (LINE,COLU) = CURSOR
ISREDIT (NLINZ) = LINENUM .ZLAST
SET &TOLIN = &NUMC + &LINE
IF &TOLIN > &NLINZ THEN +
 DO
   SET ZEDLMSG = &STR(**ERROR** NO HAY LINEA PARA COLOCAR EL TOTAL **)
   ISPEXEC SETMSG MSG(ISRZ001)
   EXIT CODE(0)
 END
SET &SUMA = 0
IF &COLU = 0 THEN SET &COLU = 9
IF (&LENGTH(&NUMO) = 0) OR (&LENGTH(&NUMC) = 0) THEN +
 DO
   SET ZEDLMSG = &STR(**ERROR** FORMATO *SUMAR ND NS* ND=NUMERO DE +
                      DIGITOS DE LOS SUMANDOS, NS = NUMERO DE SUMANDOS)
   ISPEXEC SETMSG MSG(ISRZ001)
   EXIT CODE(0)
 END
SET &COLF = &COLU + &NUMO
DO WHILE &NUMC > 0
 ISREDIT (DLINEA) = LINE &LINE
 SET &SUM1 = &SUBSTR(&COLU:&COLF,&DLINEA)
 SET &SUMA = &SUMA + &SUM1
 SET &LINE = &LINE + 1
 SET &NUMC = &NUMC - 1
END
ISREDIT LINE &LINE = LINE + < &COLU &SUMA >
EXIT CODE(0)
