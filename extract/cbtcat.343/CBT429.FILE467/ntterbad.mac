%------------------  NETWORK PROBLEM TRACKING/LOGGING  -----------------
%SPECIFY YOUR TERMINAL MODEL ===>_A
+
+Terminal types:
+
%     1+- IBM 3277 (Beige, labelled on left rear of cabinet)
%     2+- IBM 3279 (Black front, beige rear; Labelled on center of area
+                   below picture tube)
+
)INIT

 .CURSOR = A

 &ZCMD = ' '

 &A = ' '

 &NTDATA00 = ' '
 &NTDATA01 = ' '
 &NTDATA02 = ' '
 &NTDATA03 = ' '
 &NTDATA04 = ' '
 &NTDATA05 = ' '
 &NTDATA06 = ' '
 &NTDATA07 = ' '
 &NTDATA08 = ' '
 &NTDATA09 = ' '


)PROC

 VER (&A,NONBLANK)
 VER (&A,LIST,1,2)

 .CURSOR = A

 IF (&A = 1)
   &TRMTYPE = 'IBM 3277'
   &NTNXTPNL = 'NTIB3277'

 IF (&A = 2)
   &TRMTYPE = 'IBM 3279'
   &NTNXTPNL = 'NTIB3279'




 &NTDATA00 = 'USER''S TERMINAL IS A: &TRMTYPE'




 VPUT (NTNXTPNL NTCONTIN) SHARED
 VPUT (NTDATA00 NTDATA01 NTDATA02 NTDATA03 NTDATA04) SHARED
 VPUT (NTDATA05 NTDATA06 NTDATA07 NTDATA08 NTDATA09) SHARED

)END
