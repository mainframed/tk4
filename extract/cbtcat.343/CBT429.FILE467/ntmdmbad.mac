%-----------------------  NETWORK PROBLEM TRACKING/LOGGING  ------------
%Specify Brand of Modem ===>_#
+
+Modem Brands:
%   1+- Racal-Milgo 24 LSI (grey/silver, labelled on front left)
%   2+- American Bell Local Area Dataset (lt blue/black, labelled on fro
+
+
+      Enter an%X+next to the speed that you are currently operating the
+      line at.
+
+          600 BPS%===>_A+
+         1200 BPS%===>_B+
+         2400 BPS%===>_C+
+         4800 BPS%===>_D+
+         9600 BPS%===>_E+
+       19,200 BPS%===>_F+
+
)INIT

 .CURSOR = #

 &ZCMD = ' '

 &# = ' '
 &A = ' '
 &B = ' '
 &C = ' '
 &D = ' '
 &E = ' '
 &F = ' '

 &NTDATA00 = ' '
 &NTDATA01 = ' '
 &NTDATA02 = ' '
 &NTDATA03 = ' '
 &NTDATA04 = ' '
 &NTDATA05 = ' '
 &NTDATA06 = ' '
 &NTDATA07 = ' '
 &NTDATA08 = ' '
 &NTDATA09 = ' '


)PROC

 VER (&#,NONBLANK)
 VER (&#,LIST,1,2)

 .CURSOR = A

 IF (&# = 1)
   &MDMTYPE = 'RACAL 24LSI'
   &NTNXTPNL = 'NTR24LSI'

 IF (&# = 2)
   &MDMTYPE = 'AMERICAN BELL LOCAL AREA DATASET'
   &NTNXTPNL = 'NTABLADS'


 &G = '&A&B&C&D&E&F'
 VER (&G,NONBLANK)

 IF (&A ^= ' ')
  &SPEED = '600'
  VER (&A,LIST,X,MSG=NETRK005)
  &G = '&B&C&D&E&F'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = A

 IF (&B ^= ' ')
  &SPEED = '1200'
  VER (&B,LIST,X,MSG=NETRK005)
  &G = '&A&C&D&E&F'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = B

 IF (&C ^= ' ')
  &SPEED = '2400'
  VER (&C,LIST,X,MSG=NETRK005)
  &G = '&A&B&D&E&F'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = C

 IF (&D ^= ' ')
  &SPEED = '4800'
  VER (&D,LIST,X,MSG=NETRK005)
  &G = '&A&B&C&E&F'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = D

 IF (&E ^= ' ')
  &SPEED = '9600'
  VER (&E,LIST,X,MSG=NETRK005)
  &G = '&A&B&C&D&F'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = E

 IF (&F ^= ' ')
  &SPEED = '19200'
  VER (&F,LIST,X,MSG=NETRK005)
  &G = '&A&B&C&D&E'
  IF (&G ^= ' ')
    .MSG = NETRK004
    .CURSOR = F


 &NTDATA00 = 'USER''S MODEM IS: &MDMTYPE OPERATING AT &SPEED BPS'




 VPUT (NTNXTPNL NTCONTIN) SHARED
 VPUT (NTDATA00 NTDATA01 NTDATA02 NTDATA03 NTDATA04) SHARED
 VPUT (NTDATA05 NTDATA06 NTDATA07 NTDATA08 NTDATA09) SHARED

)END
