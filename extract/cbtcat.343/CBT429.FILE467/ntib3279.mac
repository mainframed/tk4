%------------------  NETWORK PROBLEM TRACKING/LOGGING  -----------------
%COMMAND ===>_ZCMD
+
+      Below is a diagram of the front of your IBM 3279 terminal.
+     %O+represents a light being off;
+      Change to%X+if your light is on solid or to%B+if blinking.
+      For Switches, put an%X+to the left of the end that's pressed down
+
+                                                   %===>_D+&NORM     +
+ _A+&LIGHT1  +     %L+                                     × ×       +
+                   %I+                                     × ×       +
+ _B+&LIGHT2  +  <--%G+                  %S+        %===>_E+&TEST     +
+                   %H+                  %W+                          +
+ _C+&LIGHT3  +     %T+                  %I+        %===>_F+&DOT4     +
+                   %S+                  %T -->+            × ×       +
+                                        %C+                × ×       +
+                                        %H+        %===>_G+&DOT2     +
+                                        %E+                          +
+                                        %S+        %===>_H+&UPLOW1   +
+                                                           × ×       +
+                                                           × ×       +
%===>_J+× × ×                                       %===>_I+&UPLOW2   +
+       ×   × %&POWER                +                                +
%===>_K+× O ×                                                         +
)INIT
 &A = 'O'
 &B = 'O'
 &C = 'O'
 &D = '_'
 &E = '_'
 &F = '_'
 &G = '_'
 &H = '_'
 &I = '_'
 &J = '_'
 &K = '_'

 .CURSOR = D

 &ZCMD = ' '

 &LIGHT1 = 'LIGHT1'
 &LIGHT2 = 'LIGHT2'
 &LIGHT3 = 'LIGHT3'
 &NORM = 'NORMAL'
 &TEST = 'TEST'
 &DOT4 = '0000'
 &DOT2 = '00'
 &UPLOW1 = 'A,A'
 &UPLOW2 = 'A'
 &POWER = '<---POWER SWITCH'

 &A = 'O'
 &B = 'O'
 &C = 'O'



 &NTDATA00 = ' '
 &NTDATA01 = ' '
 &NTDATA02 = ' '
 &NTDATA03 = ' '
 &NTDATA04 = ' '
 &NTDATA05 = ' '
 &NTDATA06 = ' '
 &NTDATA07 = ' '
 &NTDATA08 = ' '
 &NTDATA09 = ' '


)PROC
 IF (&ZCMD ^= &Z) .MSG = ISPZ001
 VER (&A,LIST,O,X,B)
 VER (&B,LIST,O,X,B)
 VER (&C,LIST,O,X,B)
 VER (&D,LIST,X,'_')
 VER (&E,LIST,X,'_')
 VER (&F,LIST,X,'_')
 VER (&G,LIST,X,'_')
 VER (&H,LIST,X,'_')
 VER (&I,LIST,X,'_')
 VER (&J,LIST,X,'_')
 VER (&K,LIST,X,'_')

   &ONOFF1 = 'OFF     '
   &ONOFF2 = 'OFF     '
   &ONOFF3 = 'OFF     '
   &PWRSWCH = 'OFF'

 IF (&A = X)
   &ONOFF1 = 'ON      '

 IF (&B = X)
   &ONOFF2 = 'ON      '

 IF (&C = X)
   &ONOFF3 = 'ON      '

 IF (&A = B)
   &ONOFF1 = 'BLINKING'

 IF (&B = B)
   &ONOFF2 = 'BLINKING'

 IF (&C = B)
   &ONOFF3 = 'BLINKING'



 IF (&D ^= 'X')
   IF (&E ^= 'X')
     .CURSOR = D
     .MSG=NETRK006

 IF (&D = 'X')
   VER (&E,LIST,'_',MSG=NETRK004)
   &RHSW1 = 'NORMAL'

 IF (&E = 'X')
   VER (&D,LIST,'_',MSG=NETRK004)
   &RHSW1 = 'TEST'



 IF (&F ^= 'X')
   IF (&G ^= 'X')
     .CURSOR = F
     .MSG=NETRK006

 IF (&F ^= '_')
   VER (&G,PICT,'_',MSG=NETRK004)
   &RHSW2 = '4 COLOR'

 IF (&G ^= '_')
   VER (&F,PICT,'_',MSG=NETRK004)
   &RHSW2 = '2 COLOR'



 IF (&H ^= 'X')
   IF (&I ^= 'X')
     .CURSOR = H
     .MSG=NETRK006

 IF (&H ^= '_')
   VER (&I,PICT,'_',MSG=NETRK004)
   &RHSW3 = 'UPPER/LOWER CASE'

 IF (&I ^= '_')
   VER (&H,PICT,'_',MSG=NETRK004)
   &RHSW3 = 'UPPER CASE ONLY'



 IF (&J ^= 'X')
   IF (&K ^= 'X')
     .CURSOR = J
     .MSG=NETRK006

 IF (&J ^= '_')
   VER (&K,PICT,'_',MSG=NETRK004)
   &PWRSWCH = 'ON'

 IF (&K ^= '_')
   VER (&J,PICT,'_',MSG=NETRK004)
   &PWRSWCH = 'OFF'



 &NTDATA00 = 'LIGHT AND SWITCH SETTINGS ON THE 3279'
 &NTDATA01 = '×'
 &NTDATA02 = '&LIGHT1 IS &ONOFF1             TEST/NORMAL SWITCH -->  &RH
 &NTDATA03 = '&LIGHT2 IS &ONOFF2             4/2 COLOR SWITCH -->    &RH
 &NTDATA04 = '&LIGHT3 IS &ONOFF3             UPPER-LOWER SWITCH -->  &RH
 &NTDATA05 = '×'
 &NTDATA06 = 'POWER SWITCH IS &PWRSWCH'




 &NTNXTPNL = 'EXIT    '


 VPUT (NTNXTPNL NTCONTIN) SHARED
 VPUT (NTDATA00 NTDATA01 NTDATA02 NTDATA03 NTDATA04) SHARED
 VPUT (NTDATA05 NTDATA06 NTDATA07 NTDATA08 NTDATA09) SHARED

)END
