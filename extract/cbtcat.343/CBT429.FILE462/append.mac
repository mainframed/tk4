ISREDIT MACRO (MEMBER)

        IF &STR(&MEMBER) = HELP THEN +
            DO
            ISPEXEC SELECT PGM(ISPTUTOR) PARM(#APPEND)
            EXIT
            END

        IF &STR(&MEMBER) = THEN +
            DO
            SET ZEDSMSG = &STR(ENTER MEMBER NAME)
            SET ZEDLMSG = &STR(YOU MUST SPECIFY THE MEMBER NAME +
            FOR THE APPEND COMMAND)
            ISPEXEC SETMSG MSG(ISRZ001)
            EXIT CODE(12)
            END

ISPEXEC CONTROL ERRORS RETURN
ISREDIT COPY &MEMBER AFTER .ZLAST
SET LCC  = &LASTCC
ISPEXEC CONTROL ERRORS CANCEL
IF &LCC NE 0 THEN +
    DO
    ISPEXEC SETMSG MSG(&ZERRMSG)
    EXIT CODE(12)
    END
