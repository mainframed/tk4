)ATTR DEFAULT(%+_)
    % TYPE(TEXT) INTENS(HIGH) COLOR(WHITE) SKIP(ON)
    Ö TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
    + TYPE(TEXT) INTENS(LOW)  COLOR(TURQ) SKIP(ON)
    _ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED)
    ^ TYPE(INPUT) INTENS(HIGH) CAPS(ON) JUST(LEFT) COLOR(RED) PAD(_)
    | TYPE(INPUT) INTENS(HIGH) CAPS(OFF)
)BODY EXPAND(\\)
+-\-\-ÖPDS LISTC/LISTFILE Command Selection+-\-\-
%OPTION  ===>_ZCMD
+
+
+Enter operands for LISTC/LISTFILE
%===>_LOPER                                                            +
+
+Optional:
%   DSAT           +- Use DSAT command to build or add to table.
%   VTOC           +- Use VTOC command to build or add to table.
%   V2             +-  "   "      "    "    "   "   "  "   "
                      (optional prompt for LIMIT/ANDn/ORn values).
%   RESET          +- Clear table before building a new table.
)INIT
  &LOPER  = '&OPERS'
  .CURSOR = LOPER
 .HELP = P85PNK@
  IF(&LOPER  = &Z) &LOPER=&P85#LT3
  IF(&ZCMD ^= &Z)
    &X=TRUNC(&ZCMD,' ')
    &LOPER = .TRAIL
    &ZCMD = &Z
)PROC
 &P85#LT3=&LOPER
 &PDSZSEL = 'LISTC  &LOPER'
)END
