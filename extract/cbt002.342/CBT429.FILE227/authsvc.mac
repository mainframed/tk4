/*DIST ROOM-9
//************************************************************//
//**    Example of a Simple Authorization SVC for MVS       **//
//************************************************************//
//* ---------  ASSEMBLY AND LINKEDIT PROCEDURE  ------------ *//
//REASMLNK PROC
//*SM    EXEC  PGM=IEV90,REGION=2048K,        IBM H ASSEMBLER
//ASM    EXEC  PGM=AEV90,REGION=2048K,        SLAC ASSEMBLER
//             PARM=(DECK,NOOBJECT,NORLD,RENT,TERM,'XREF(SHORT)')
//STEPLIB  DD  DISP=SHR,DSN=SYS1.USER.LINKLIB   <--- HAS SLAC ASMBLR
//SYSUT1   DD  UNIT=SYSDA,SPACE=(CYL,(10,5))
//SYSUT2   DD  UNIT=SYSDA,SPACE=(CYL,(10,5))
//SYSUT3   DD  UNIT=SYSDA,SPACE=(CYL,(10,5))
//SYSPUNCH DD  UNIT=SYSDA,SPACE=(TRK,(5,5)),DISP=(MOD,PASS),DSN=&&X,
//             DCB=BLKSIZE=3120
//SYSPRINT DD  SYSOUT=*
//SYSTERM  DD  SYSOUT=*
//SYSLIB   DD  DSN=SYS1.MODGEN,DISP=SHR,DCB=BLKSIZE=23440
//         DD  DSN=SYS1.AMODGEN,DISP=SHR
//         DD  DSN=SYS1.MACLIB,DISP=SHR
//*        DD  DSN=SYS2.SBG.MACLIB,DISP=SHR
//LKED   EXEC  PGM=IEWL,PARM='MAP,RENT,REUS,REFR,LET,NCAL',COND=(0,LT)
//SYSPRINT DD  SYSOUT=*
//SYSLIBX  DD  DSN=&&X,DISP=(OLD,DELETE)
//SYSLMOD  DD  DISP=SHR,DSN=&OUTPUT
//SYSUT1   DD  UNIT=SYSDA,SPACE=(TRK,(5,5))
//   PEND
//* -------------------------------------------------------- *//
//IGC0022C  EXEC REASMLNK,OUTPUT='SBGCSC.A.LOAD',         <=== CHANGE
//  PARM.LKED='NCAL,MAP,LIST,LET,RENT,REUS'
//ASM.SYSIN   DD *
IGC0022C CSECT                                                     0000
         BALR  R12,0                   05C0       R12 IS BASE      0000
         USING *,R12                              TELL ASSEMBLER
         C     R1,STRING               5910 C01E  COMPARE TO "AUTH"0002
         BNE   RETURN                  4770 C01C  NOT EQUAL, RETRN 0006
         L     R2,180(,R4)             5820 40B4  JSCB OFF TCB     000A
         BCT   R0,AUTHOFF              4600 C018  TEST R0 IF ZERO  000E
AUTHON   OI    236(R2),X'01'           9601 20EC  TURN JSCBAUTH ON 0012
         B     RETURN                  47F0 C01C  BACK TO CALLER   0016
AUTHOFF  NI    236(R2),X'FE'           94FE 20EC  TURN JSCBAUTH OFF001A
RETURN   BR    R14                     07FE       RETURN           001E
STRING   DC    C'AUTH'                 C1E4E3C8   *AUTH* STRING    0020
R0       EQU   0              R
R1       EQU   1                E
R2       EQU   2                  G
R3       EQU   3                    I
R4       EQU   4                      S
R5       EQU   5                        T
R6       EQU   6                          E
R7       EQU   7                            R
R8       EQU   8
R9       EQU   9                                E
R10      EQU   10                                 Q
R11      EQU   11                                   U
R12      EQU   12                                     A
R13      EQU   13                                       T
R14      EQU   14                                         E
R15      EQU   15                                           S
         END
//LKED.SYSLIN  DD *
 INCLUDE SYSLIBX
 ORDER   IGC0022C
 ENTRY   IGC0022C
 NAME    IGC0022C(R)
