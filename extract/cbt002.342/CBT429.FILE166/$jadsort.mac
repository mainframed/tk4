)ATTR
 % TYPE(TEXT)  CAPS(OFF)
 + TYPE(TEXT)  INTENS(LOW)   CAPS(OFF)  COLOR(WHITE) SKIP(ON)
 | TYPE(TEXT)  CAPS(OFF)  COLOR(GREEN)
 ! TYPE(TEXT)  CAPS(OFF)  COLOR(YELLOW)
 @ TYPE(OUTPUT) INTENS(LOW) CAPS(OFF)  COLOR(TURQ) JUST(RIGHT)
 " TYPE(OUTPUT) JUST(ASIS) HILITE(REVERSE) COLOR(GREEN)
 å TYPE(OUTPUT) JUST(RIGHT) HILITE(REVERSE) COLOR(RED)
 æ TYPE(OUTPUT) JUST(RIGHT) HILITE(REVERSE) COLOR(BLUE)
 # TYPE(INPUT)            COLOR(YELLOW)
 Ö TYPE(TEXT)  JUST(ASIS) HILITE(REVERSE) COLOR(YELLOW)
)BODY WINDOW(40,16) EXPAND(``)
%`-`ÖSORT Option Panel%`-`
+
+ Opt ....... #Z+ (0 Through 6)
!
!    0. |No Sorting
!    1. |Sort By Job Name
!    2. |Sort By TCBTIME
!    3. |Sort By SRBTIME
!    4. |Sort By Total Storage
!    5. |Sort By Real Storage
!    6. |Sort By Expanded Storage
!    7. |Sort By EXCPCOUNT
!
+ Sort Seq .. #Z+ (A or D)
!
| PF3-Cancel
)INIT
 .ZVARS = '(OPT SORTSEQ)'
 .CURSOR = OPT
 &OPT = ''
 &SORTSEQ = 'D'
 &OPTSTMT = ''
)PROC
   VER (&OPT,NB,LIST,0,1,2,3,4,5,6,7)
   VER (&SORTSEQ,NB,LIST,A,D)
   IF (&OPT = 0)
      &OPTSTMT = ' '
   IF (&OPT = 1)
      &OPTSTMT = JOBN
   IF (&OPT = 2)
      &OPTSTMT = TCBTIME
   IF (&OPT = 3)
      &OPTSTMT = SRBTIME
   IF (&OPT = 4)
      &OPTSTMT = STORAGE
   IF (&OPT = 5)
      &OPTSTMT = RSTOR
   IF (&OPT = 6)
      &OPTSTMT = ESTOR
   IF (&OPT = 7)
      &OPTSTMT = EXCPCNT
)END
