PROC 0
CONTROL PROMPT
ISREDIT MACRO
ISREDIT (DSNAME) = DATASET
ISREDIT (MEMBER) = MEMBER
IF &MEMBER EQ /*NULL*/ -
   THEN SET &SCDSN = &STR('&DSNAME')
   ELSE SET &SCDSN = &STR('&DSNAME(&MEMBER)')
ISPEXEC DISPLAY PANEL(SCPANL)
ISPEXEC VPUT (SCOPTS) PROFILE
IF &RESPONSE EQ /* NULL */ THEN -
   DO
   SCRIPT &SCDSN &SCOPTS
   SET &CCODE = &LASTCC
   SET &ZEDSMSG = &STR(ENDED RC=&CCODE)
   SET &ZEDLMSG = &STR(SCRIPT ENDED WITH A RETURN CODE OF &CCODE)
   END
ELSE DO
   SET &ZEDSMSG = &STR(REQUEST CANCELLED)
   SET &ZEDLMSG = &STR(EDSCR TERMINATED BY AN END OR RETURN COMMAND)
   END
ISPEXEC SETMSG MSG(ISRZ000)
ISPEXEC CONTROL DISPLAY REFRESH
