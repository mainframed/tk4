         MACRO
&NAME    @MDM0000 &DSECT=NO,&CSECT=YES,&CONTDS=NO
.*---------------------------------------------------------------------
.*       PARMS PASSED BETWEEN DATA SET DIALOG MANAGERS
.*---------------------------------------------------------------------
*----------------------------------------------------------------------
         AIF   ('&DSECT' EQ 'YES').CHKCONT
&NAME    DS    0D
EPA0900  DC    F'0',CL8'MDM0900'
EPA0902  DC    F'0',CL8'MDM0902'
SAVFLAG  DC    X'00'
VSAMID   DC    C'_'
SAVDSN   DC    CL44' '
SAVLOC   DC    CL6' '
SAVDATE  DC    CL8' '
SAVTRKS  DC    CL5' '
SAVVOL   DC    CL6' '
SAVCAT   DC    CL6' '
SAVVERS  DC    CL3' '
SAVDSORG DC    CL2' '
SAVRACF  DC    CL1' '
SAVRACFI DC    CL1' '
SAVRACFD DC    CL1' '
SAVHXDEV DC    CL4' '
SAVALLOC DC    CL3' '
SAVLRECL DC    CL5' '
SAVBLKSZ DC    CL5' '
SAVSECND DC    CL5' '
SAVCHDEV DC    CL6' '
SAVRECFM DC    CL3' '
SAVDATA  DC    CL44' '
SAVINDX  DC    CL44' '
SAVRDATE DC    CL8' '
         DC    X'FF'
         AGO   .DONE
*----------------------------------------------------------------------
.CHKCONT AIF   ('&CONTDS' EQ 'YES').DS
         DSECT
.DS      ANOP
&NAME    DS    0D
EPA0900  DS    XL12
EPA0902  DS    XL12
SAVFLAG  DS    XL1
VSAMID   DS    CL1
SAVDSN   DS    CL44
SAVLOC   DS    CL6
SAVDATE  DS    CL8
SAVTRKS  DS    CL5
SAVVOL   DS    CL6
SAVCAT   DS    CL6
SAVVERS  DS    CL3
SAVDSORG DS    CL2
SAVRACF  DS    CL1
SAVRACFI DS    CL1
SAVRACFD DS    CL1
SAVHXDEV DS    CL4
SAVALLOC DS    CL3
SAVLRECL DS    CL5
SAVBLKSZ DS    CL5
SAVSECND DS    CL5
SAVCHDEV DS    CL6
SAVRECFM DS    CL3
SAVDATA  DS    CL44
SAVINDX  DS    CL44
SAVRDATE DS    CL8
         DS    XL1
         AIF   ('&CSECT' EQ 'NO').DONE
&SYSECT  CSECT
.DONE    ANOP
SINSRT   EQU   X'01'
