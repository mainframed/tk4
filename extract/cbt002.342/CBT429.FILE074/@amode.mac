         MACRO
&NAME    @AMODE &MODE
.*---------------------------------------------------------------------
.*
.*       CHANGE ADDRESS MODE
.*
.*       @AMODE 24                SET ADDR MODE TO 24 BIT
.*       @AMODE 31                SET ADDR MODE TO 31 BIT
.*
.*---------------------------------------------------------------------
         LCLA  &X
&X       SETA  &SYSNDX
&NAME    DS    0H
         AIF   ('&MODE' EQ '24').A24
         AIF   ('&MODE' EQ '31').A31
         MNOTE 8,'INVALID MODE, MUST BE 24 OR 31'
         MEXIT
.A24     ANOP
*----------------------------------------------------------------------
*        SET AMODE=24
*----------------------------------------------------------------------
         ICM   R1,15,=A(MZZZ&X)
         BSM   R0,R1              SET AMODE=24
         AGO   .DONE
.A31     ANOP
*----------------------------------------------------------------------
*        SET AMODE=31
*----------------------------------------------------------------------
         ICM   R1,15,=A(MZZZ&X+X'80000000')
         BSM   R0,R1              SET AMODE=31
.DONE    ANOP
MZZZ&X   DS    0H
