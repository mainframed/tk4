PROC 0 NAME() DEST(CHPLJR46) TERSE DUMP FORCE
/* PRINTS INFO ABOUT THE TERMINAL */
SET OPT = &STR()
IF &TERSE=TERSE THEN SET OPT = &STR(&OPT -T)
IF &DUMP=DUMP THEN SET OPT = &STR(&OPT -D)
IF &FORCE=FORCE THEN SET OPT = &STR(&OPT -F)
IF &NAME^=&STR() THEN SET OPT = &STR(&OPT -N &NAME)
ALLOC F(SYSPRINT) DA(INFO3270.TEXT) SHR
CALL 'SASDDF.A.LOADLIB(INFO3270)' '&OPT'
FREE F(SYSPRINT)
PRINTOFF INFO3270.TEXT DEST(&DEST)
EXIT
