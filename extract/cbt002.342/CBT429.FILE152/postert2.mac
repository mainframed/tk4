 /* CREATED H. ZBIEGIEN  11/89     */
 /* USE FOR PRINTING POSTERS */
 /* ONE PART OUTPUT OF 1485R1 PAPER 68 LINES */
 PAGEDEF POSTER
    WIDTH 13.8 IN HEIGHT 8.5   IN
    /* 8.5 INCHES - NO MARGINS, PERF TO PERF */
    LINEONE 0 IN .1 IN   REPLACE YES;
  /*24 PELS*/
    FONT AOA; /* I CHOSE A BOLD FONT SO THAT IT LOOKS DARKER */
    SETUNITS LINESP 8 LPI;

    PAGEFORMAT P28B2 DIRECTION ACROSS;
       PRINTLINE REPEAT  1 FONT AOA CHANNEL 1 POSITION MARGIN TOP;
       PRINTLINE REPEAT 67 FONT AOA           POSITION MARGIN NEXT;
