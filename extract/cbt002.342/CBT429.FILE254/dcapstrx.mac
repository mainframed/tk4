--DROP TABLESPACE SCAP03;
--COMMIT;
  CREATE TABLESPACE SCAP03
  IN DCAP01
  USING VCAT DB2A
  PCTFREE 0
  FREEPAGE 0
  BUFFERPOOL BP0
  SEGSIZE 16
  LOCKSIZE ANY
  CLOSE NO;
  COMMIT;

  CREATE TABLE BUILD.TCAPSTRX
  (DATE               DATE     NOT NULL WITH DEFAULT,
   WEEKDAY            CHAR(03) NOT NULL WITH DEFAULT,
   STORES_REPORTING   INTEGER  NOT NULL WITH DEFAULT,
   SALES_TRANSACTIONS INTEGER  NOT NULL WITH DEFAULT)
   IN DCAP01.SCAP03;
  COMMIT;

  GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE
    BUILD.TCAPSTRX
    TO TECH110;
  COMMIT;
  GRANT SELECT ON TABLE
    BUILD.TCAPSTRX
    TO PUBLIC AT ALL LOCATIONS;
  COMMIT;
