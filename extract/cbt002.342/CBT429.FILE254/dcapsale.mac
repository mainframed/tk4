--DROP TABLESPACE SCAP04;
--COMMIT;
  CREATE TABLESPACE SCAP04
  IN DCAP01
  USING VCAT DB2A
  PCTFREE 0
  FREEPAGE 0
  BUFFERPOOL BP0
  SEGSIZE 16
  LOCKSIZE ANY
  CLOSE NO;
  COMMIT;

  CREATE TABLE BUILD.TCAPSALE
  (DATE               DATE      NOT NULL WITH DEFAULT,
   WEEKDAY            CHAR(03)  NOT NULL WITH DEFAULT,
   SALES$_REPORTED    DEC(10,2) NOT NULL WITH DEFAULT)
   IN DCAP01.SCAP04;
  COMMIT;

  GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE
    BUILD.TCAPSALE
    TO TECH110;
  COMMIT;
  GRANT SELECT ON TABLE
    BUILD.TCAPSALE
    TO PUBLIC AT ALL LOCATIONS;
  COMMIT;
