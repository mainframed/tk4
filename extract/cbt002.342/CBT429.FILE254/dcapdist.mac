--DROP TABLESPACE SCAP05;
--COMMIT;
  CREATE TABLESPACE SCAP05
  IN DCAP01
  USING VCAT DB2A
  PCTFREE 0
  FREEPAGE 0
  BUFFERPOOL BP0
  SEGSIZE 16
  LOCKSIZE ANY
  CLOSE NO;
  COMMIT;

  CREATE TABLE BUILD.TCAPDIST
  (DATE               DATE      NOT NULL WITH DEFAULT,
   WEEKDAY            CHAR(03)  NOT NULL WITH DEFAULT,
   DISTROS            INTEGER   NOT NULL WITH DEFAULT,
   DISTRO_UNITS       INTEGER   NOT NULL WITH DEFAULT)
   IN DCAP01.SCAP05;
  COMMIT;

  GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE
    BUILD.TCAPDIST
    TO TECH110;
  COMMIT;
  GRANT SELECT ON TABLE
    BUILD.TCAPDIST
    TO PUBLIC AT ALL LOCATIONS;
  COMMIT;
