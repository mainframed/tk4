--DROP TABLESPACE SCAP06;
--COMMIT;
  CREATE TABLESPACE SCAP06
  IN DCAP01
  USING VCAT DB2A
  PCTFREE 0
  FREEPAGE 0
  BUFFERPOOL BP0
  SEGSIZE 16
  LOCKSIZE ANY
  CLOSE NO;
  COMMIT;

  CREATE TABLE BUILD.TCAPINVN
  (DATE               DATE      NOT NULL WITH DEFAULT,
   WEEKDAY            CHAR(03)  NOT NULL WITH DEFAULT,
   INVEN_UNITS_IN     INTEGER   NOT NULL WITH DEFAULT,
   INVEN_VALUE_IN     DEC(10,2) NOT NULL WITH DEFAULT,
   INVEN_UNITS_OUT    INTEGER   NOT NULL WITH DEFAULT,
   INVEN_VALUE_OUT    DEC(10,2) NOT NULL WITH DEFAULT)
   IN DCAP01.SCAP06;
  COMMIT;

  GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE
    BUILD.TCAPINVN
    TO TECH110;
  COMMIT;
  GRANT SELECT ON TABLE
    BUILD.TCAPINVN
    TO PUBLIC AT ALL LOCATIONS;
  COMMIT;
