--DROP DATABASE DCAP01;
--COMMIT;
  CREATE DATABASE DCAP01;
  COMMIT;

  CREATE TABLESPACE SCAP01
  IN DCAP01
  USING VCAT DB2A
  PCTFREE 0
  FREEPAGE 0
  BUFFERPOOL BP0
  SEGSIZE 16
  LOCKSIZE ANY
  CLOSE NO;
  COMMIT;

  CREATE TABLE BUILD.TCAPTMON
  (DATE               DATE      NOT NULL WITH DEFAULT,
   WEEKDAY            CHAR(03)  NOT NULL WITH DEFAULT,
   AREA               CHAR(40)  NOT NULL WITH DEFAULT,
   TRANS_COUNT        INTEGER   NOT NULL WITH DEFAULT,
   RESP_TIME_SEC      DEC(14,4) NOT NULL WITH DEFAULT,
   FILE_COUNT         INTEGER   NOT NULL WITH DEFAULT,
   IO_TIME_SEC        DEC(14,4) NOT NULL WITH DEFAULT,
   CPU_TIME_SEC       DEC(14,4) NOT NULL WITH DEFAULT,
   RESP_01_COUNT      INTEGER   NOT NULL WITH DEFAULT,
   RESP_12_COUNT      INTEGER   NOT NULL WITH DEFAULT,
   RESP_23_COUNT      INTEGER   NOT NULL WITH DEFAULT,
   RESP_34_COUNT      INTEGER   NOT NULL WITH DEFAULT,
   RESP_G4_COUNT      INTEGER   NOT NULL WITH DEFAULT)
   IN DCAP01.SCAP01;
  COMMIT;

  GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE
    BUILD.TCAPTMON
    TO TECH110;
  COMMIT;
  GRANT SELECT ON TABLE
    BUILD.TCAPTMON
    TO PUBLIC AT ALL LOCATIONS;
  COMMIT;
