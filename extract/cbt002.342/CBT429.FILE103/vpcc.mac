         PROC 0 DEBUG
         IF &DEBUG = DEBUG THEN CONTROL LIST CONLIST SYMLIST
         ISPEXEC VGET (ZSPLIT,ZSCREEN)
         IF &ZSPLIT = YES THEN IF &ZSCREEN ^= 2 THEN DO
           SET ZEDSMSG = BOTTOM SCREEN
           SET ZEDLMSG = +
           &STR(WHEN IN SPLIT SCREEN, PC SEND/RECEIVE CAN ONLY BE DONE)
           SET ZEDLMSG = +
           &STR(&ZEDLMSG ON THE BOTTOM SCREEN)
           ISPEXEC SETMSG MSG(ISRZ001)
           EXIT CODE(12)
           END
         ISPEXEC DISPLAY PANEL(VPC)
         SET DCC = &LASTCC
         DO WHILE(&DCC = 0)
           ISPEXEC DISPLAY PANEL(VPC)
           SET DCC = &LASTCC
           END
