 ISREDIT MACRO (PARM) NOPROCESS
 ISPEXEC CONTROL ERRORS RETURN
 SET &LEVELX = 1
     IF &PARM = ? THEN +
       DO
         ISPEXEC DISPLAY PANEL(SHOWCUT2)
         EXIT
       END
                      ISREDIT (ROW,COL)     = CURSOR
                      IF &ROW NE 1 THEN +
                      ISREDIT (LAST)    = LINENUM .ZLAST
                      IF &ROW > &LAST THEN +
                      SET &ROW = &ROW + 1
SET &N1= &STR(FIRST LINE OF EACH LEVEL OF CUT WILL BE SHOWN)
 ISREDIT LINE_BEFORE &ROW = MSGLINE "&N1"
 SET &L = &L + 1
START: +
 SET LEVEL = &LEVELX
ISPEXEC VGET (RCUTLM&LEVEL,RCUTLB&LEVEL,RCUTRB&LEVEL) PROFILE
IF &LASTCC > 0 THEN +
  DO
      IF &PARM = TERSE THEN GOTO NOLINE
           SET &CUTX = &STR(NO LINE(S) CUT FOR LEVEL &LEVELX)
           GOTO NOLINE
        END
SET LINES = &&RCUTLM&LEVEL
SET LINESTOPASTE = &LINES
SET &N2 = &STR(CUT LEVEL &LEVEL HAS &LINES LINE(S))
 ISREDIT LINE_BEFORE &ROW = MSGLINE "&N2"
 SET &L = &L + 1
 ISPEXEC VGET RCUT&LEVEL&EVAL(&INDEX+1) PROFILE
 SET &CUT = &STR(&&RCUT&LEVEL&EVAL(&INDEX+1))
 SET &LEN = &LENGTH(&STR(&CUT))
 IF &LEN > 79 THEN SET &LEN = 79
 IF &LENGTH(&STR(&CUT)) NE 0 THEN +
   SET &CUTX  = &SUBSTR(1:&LEN,&STR(&CUT))
GOTO HAVECUT
NOLINE: +
IF &PARM = TERSE THEN GOTO NEXTLEV
HAVECUT: +
 IF &LENGTH(&STR(&CUT)) = 0 THEN  SET &CUTX = &STR(*** BLANK LINE ***)
 ISREDIT LINE_BEFORE &ROW = MSGLINE "&CUTX"
NEXTLEV: +
SET &LEVELX = &LEVELX +1
IF &LEVELX > 99 THEN GOTO GETOUT
GOTO START
GETOUT: +
ISREDIT LOCATE SPE FIRST
EXIT  CODE(0)
