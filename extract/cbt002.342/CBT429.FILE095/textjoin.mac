ISREDIT MACRO (HELP) NOPROCESS
IF &HELP = ? THEN DO
ISPEXEC DISPLAY PANEL(TEXTJOIN)
EXIT
END
  ISREDIT (LB,RB) = BOUNDS
  ISREDIT (ROW,COL) = CURSOR
     ISREDIT C X'50' X'FA' ALL
 ISREDIT (PART1) = LINE &EVAL(&ROW)
 ISREDIT (PART2) = LINE &EVAL(&ROW +1)
 SET &PART1 = &NRSTR(&PART1)
 SET &PART2 = &NRSTR(&PART2)
 SET &L = &EVAL(&LB)
 SET &R = &EVAL(&RB)
 SET &PARTX = &SUBSTR(&L:&COL,&NRSTR(&PART1))
 SET &PARTY = &SUBSTR(&L:&EVAL(&R-&COL),&NRSTR(&PART2))
 SET &PART1 = &NRSTR(&PARTX)
 SET &PART1A = &NRSTR(&PARTY)
 SET PART1 = &NRSTR(&STR(&PART1)&STR(&PART1A))
 SET &X = &EVAL(&LENGTH(&NRSTR(&PARTY))+1)
 SET &PARTZ = &SUBSTR(&X:&EVAL(&R),&NRSTR(&PART2))
 ISREDIT LINE &EVAL(&ROW) = "&PART1"
 IF &STR(&PARTZ) ^= THEN +
 ISREDIT LINE &EVAL(&ROW +1) = "&PARTZ"
 IF &STR(&PARTZ) = THEN ISREDIT DELETE &EVAL(&ROW +1)
     ISREDIT C X'FA' X'50' ALL
     ISREDIT RESET
     ISREDIT  CURSOR = &ROW 1
