         ISREDIT MACRO (STUFF)


         CONTROL FLUSH MSG NOPROMPT
         ISPEXEC CONTROL ERRORS CANCEL

        IF &STR(&STUFF) = ?  +
            THEN DO
            ISPEXEC DISPLAY PANEL(SHOWDCB)
            EXIT
            END

         IF &STR(&STUFF) NE THEN +
            DO
            SET ZEDSMSG = &STR(INVALID PARAMETERS)
            SET ZEDLMSG = &STR(NO PARAMTERS ARE ALLOWED FOR THE +
            SHOWDCB COMMAND)
            ISPEXEC SETMSG MSG(ISRZ001)
            EXIT CODE(12)
            END

         ISREDIT (DSN) = DATASET
LISTDSI '&DSN' DIRECTORY
 SET ZEDLMSG = &STR(DCB=(LRECL=&SYSLRECL,BLKSIZE=&SYSBLKSIZE,+
 RECFM=&SYSRECFM,DSORG=&SYSDSORG))
         ISPEXEC SETMSG MSG(ISRZ000)
