  ISREDIT HEX OFF
  ISREDIT CAPS = ON
  SET ZEDSMSG = &STR(UPPERCASE COMPLETE)
  SET ZEDLMSG = &STR(ALL LOWERCASE CHARACTERS CONVERTED TO UPPERCASE)
  ISPEXEC SETMSG MSG(ISRZ000)
  ISREDIT RESET CHG
  ISREDIT LOCATE &COL
  EXIT CODE(1)
