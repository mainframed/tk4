PROC 0 DEBUG
/* ----------------------------------------------------------------- */
/*     JIM MARSHALL                                                  */
/*     TRANSMIT / RECEIVE SYSTEM                                     */
/*     'RECEIVE MSGS OR FILES'                                       */
/* ----------------------------------------------------------------- */
CONTROL NOFLUSH MSG PROMPT
IF &DEBUG ^=  &STR() THEN +
   CONTROL LIST MSG NOFLUSH PROMPT CONLIST SYMLIST
ISPEXEC CONTROL ERRORS RETURN
SET &LASTCC = 0
SET &MAXCC  = 0
RECEIVE
EXIT
