%------------------ SOFTWARE STATUS REPORT - MENU ----------------------
%OPTION ===>_ZCMD
+
+
% OPTIONS:
%         0  +ADD ENTRIES +
%         1  +LIST/UPDATE PRODUCT MAINTENANCE HISTORY
%         2  +LIST SOFTWARE PRODUCTS+
%         3  +LIST VENDORS
%         4  +LIST CATEGORIES
%         P  +PRINT SOFTWARE STATUS REPORT
+
+
%     SEARCH ARGUMENT FOR LIST OPTIONS: +(ENTER ONE OR LEAVE BLANK FOR "
+
%         ACRONYM ===>_ACRNM           +                 (OPTION 1,2)
%    PRODUCT NAME ===>_PRDN1                           + (OPTION 1,2)
%                 ===>_PRDN2                           +
%         PTF/MOD ===>_PTFMD     +                       (OPTION 1,2)
%            FMID ===>_FMID   +                          (OPTION 1,2)
%          VENDOR ===>_VENDR                           + (OPTION 1,2,3)
%        CATEGORY ===>_CTGRY                           + (OPTION 1,2,4)
)INIT
  .HELP = SSRHLP00
  &ZCMD = &ZTRAIL
  &ACRNM = ' '
  &PRDN1 = ' '
  &PRDN2 = ' '
  &PTFMD = ' '
  &FMID = ' '
  &VENDR = ' '
  &CTGRY = ' '
  &SLCT = ' '
  &PARM = ' '
  &SRCHARG1 = ' '
  &SRCHARG2 = ' '
  .CURSOR = ZCMD
  IF (&ERRT = N)
    .MSG = SSRMS002
  &ERRT = ' '
)PROC
  VER (&ZCMD,LIST,0,1,2,3,4,P,MSG=SSRMS016)
  VER (&ZCMD,NONBLANK,MSG=SSRMS016)
  &ZSEL = TRUNC (&ZCMD,;)
  &ZCMD = .TRAIL
  VER (&ZSEL,LIST,0,1,2,3,4,P)
  IF (&ZSEL = 0)
    &PARM = 'A '
  IF (&PRDN1 ^= ' ')
    &SRCHARG1 = &PRDN1
    &SLCT = 'P'
    IF (&ZSEL ^= 1,2)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HP'
    IF (&ZSEL = 2)
      &PARM = 'PP'
  IF (&PRDN2 ^= ' ')
    &SRCHARG2 = &PRDN2
    IF (&SLCT ^= 'P')
      .MSG=SSRMS001
  IF (&ACRNM ^= ' ')
    &SRCHARG1 = &ACRNM
    IF (&SLCT = 'P')
      &SLCT = ' '
      .MSG=SSRMS000
    &SLCT = 'Y'
    IF (&ZSEL ^= 1,2)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HA'
    IF (&ZSEL = 2)
      &PARM = 'PA'
  IF (&PTFMD ^= ' ')
    &SRCHARG1 = &PTFMD
    IF (&SLCT ^= ' ')
      &SLCT = ' '
      .MSG=SSRMS000
    &SLCT = 'Y'
    IF (&ZSEL ^= 1,2)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HT'
    IF (&ZSEL = 2)
      &PARM = 'PT'
  IF (&FMID ^= ' ')
    &SRCHARG1 = &FMID
    IF (&SLCT ^= ' ')
      &SLCT = ' '
      .MSG=SSRMS000
    &SLCT = 'Y'
    IF (&ZSEL ^= 1,2)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HF'
    IF (&ZSEL = 2)
      &PARM = 'PF'
  IF (&VENDR ^= ' ')
    &SRCHARG1 = &VENDR
    IF (&SLCT ^= ' ')
      &SLCT = ' '
      .MSG=SSRMS000
    &SLCT = 'Y'
    IF (&ZSEL = 0,4,P)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HV'
    IF (&ZSEL = 2)
      &PARM = 'PV'
    IF (&ZSEL = 3)
      &PARM = 'VV'
  IF (&CTGRY ^= ' ')
    &SRCHARG1 = &CTGRY
    IF (&SLCT ^= ' ')
      &SLCT = ' '
      .MSG=SSRMS000
    IF (&ZSEL = 0,3,P)
      .MSG=SSRMS001
    IF (&ZSEL = 1)
      &PARM = 'HC'
    IF (&ZSEL = 2)
      &PARM = 'PC'
    IF (&ZSEL = 4)
      &PARM = 'CC'
  IF (&PARM = '  ')
    IF (&ZSEL = 1)
      &PARM = 'HP'
    IF (&ZSEL = 2)
      &PARM = 'PP'
    IF (&ZSEL = 3)
      &PARM = 'VV'
    IF (&ZSEL = 4)
      &PARM = 'CC'
    IF (&ZSEL = P)
      &PARM = 'L '
  &SLCT = ' '
)END
