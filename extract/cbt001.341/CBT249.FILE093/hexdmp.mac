      SUBROUTINE HEXDMP
      COMMON/OPTION/ISTRM
      DIMENSION IBUF(1000)
C
C   HEX DUMP ROUTINE
C
      REWIND ISTRM
      WRITE(6,6000)
 6000 FORMAT('1 HEX DUMP OPTION')
   20 CONTINUE
      READ(ISTRM,1000,END=10) IBUF
 1000 FORMAT(4(250A4))
      WRITE(6,6010) IBUF
 6010 FORMAT((5(1X,Z8,1X),3X,5(1X,Z8,1X)))
      GOTO 20
   10 CONTINUE
      RETURN
      END
