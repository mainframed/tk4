 SCNSBST:  PROCEDURE(STMAP)REORDER;
 %INCLUDE DCLSTMAP;
 %INCLUDE EXTVAR2;
-/*   SCNSBST IS CALLED TO LOCATE INDIVIDUAL STATEMENTS WITHIN
 /*      SBSTMTS.
 /*      THE STRUCTURE STMAP IS SET TO INDICATE
 /*           1) THE NUMBER OF STATEMENTS IN SBSTMTS,
 /*           2) THE STTYPE OF EACH STATEMENT, AND
 /*           3) THE STARTING POINT OF EACH STATEMENT.
 /*      A DUMMY LAST ENTRY IS INCLUDED SO THAT THE LENGTH OF THE
 /*           LAST STATEMENT CAN BE EASILY CALCULATED.
 /*      IT IS ASSUMED THAT SBSTMTS CONTAINS AT MOST
 /*           HBOUND(STMAP.STMT_TYPE,1)-1 STATEMENTS. */
0DECLARE
      I FIXED BINARY,
      TP CHAR(9),
      (INDEX,LENGTH,SUBSTR)BUILTIN;
-     STMT_NO=0;
      STMT_TYPE=(12)' ';STMT_START=0;
      DO I=1 REPEAT(I+INDEX(SUBSTR(SBSTMTS,I),'/'))
         WHILE(I<LENGTH(SBSTMTS));
         STMT_NO=STMT_NO+1;
         STMT_START(STMT_NO)=I;
         TP=SUBSTR(SBSTMTS,I);
         SUBSTR(TP,9,1)=' ';
         STMT_TYPE(STMT_NO)=SUBSTR(TP,1,INDEX(TP,' '));
      END;
      STMT_START(STMT_NO+1)=LENGTH(SBSTMTS)+1;
0END SCNSBST;
