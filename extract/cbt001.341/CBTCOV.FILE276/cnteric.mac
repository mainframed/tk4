 CNTERIC:  PROCEDURE OPTIONS(MAIN);
0DECLARE
      ERIC RECORD KEYED SEQUENTIAL INPUT
         ENV(U SCALARVARYING REGIONAL(3) KEYLENGTH(3) TOTAL),
      P POINTER,
      V CHAR(4004)VARYING BASED(P),
      SYSPRINT PRINT,
      (LENGTH,MAX)BUILTIN,
      (TOTAL_BYTES,NUMBER_OF_RECORDS,AVERAGE_LENGTH)FIXED BINARY(31)
         STATIC INITIAL(0),
      EOF BIT(1)STATIC INITIAL(0);
0ON ENDFILE(ERIC)EOF=1B;
0     READ FILE(ERIC)SET(P);
      DO NUMBER_OF_RECORDS=0 BY 1 WHILE(^EOF);
         TOTAL_BYTES=TOTAL_BYTES+LENGTH(V);
         READ FILE(ERIC)SET(P);
      END;
0     AVERAGE_LENGTH=TOTAL_BYTES/MAX(NUMBER_OF_RECORDS,1);
      PUT FILE(SYSPRINT)DATA(NUMBER_OF_RECORDS,TOTAL_BYTES,
         AVERAGE_LENGTH);
0END CNTERIC;
