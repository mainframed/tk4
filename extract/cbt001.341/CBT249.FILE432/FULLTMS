00000100PROC 0
00000200ISPEXEC CONTROL DISPLAY LINE
00000300CALL 'AOST.LOAD(SCRSIZE)'
00000400   SET &TTYPE = &LASTCC
00000500   TERMINAL SCRSIZE(24,80)
00000600FULLTMS
00000700   IF &TTYPE = 2 THEN TERMINAL SCRSIZE(24,80)
00000800   IF &TTYPE = 4 THEN TERMINAL SCRSIZE(43,80)
00000900   IF &TTYPE = 5 THEN TERMINAL SCRSIZE(27,132)
00001000ISPEXEC CONTROL DISPLAY REFRESH
