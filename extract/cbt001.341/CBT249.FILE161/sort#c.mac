PROC 0
/*--------------------------------------------------------*/
/*      ISPF/PDF CLIST FOR DOING INTERACTIVE SORTS        */
/*--------------------------------------------------------*/
CONTROL  NOMSG
FREE FI(SYSPRINT SYSIN SYSOUT SORTIN SORTOUT    +
        SORTWK01 SORTWK02 SORTWK03)
ALLOC FI(SYSOUT) DA(*)
ALLOC FI(SORTWK01) UNIT(SYSDA) SPACE(9) TRACKS
ALLOC FI(SORTWK02) UNIT(SYSDA) SPACE(9) TRACKS
ALLOC FI(SORTWK03) UNIT(SYSDA) SPACE(9) TRACKS
ISPEXEC VGET (SDSNIN SDSNOUT CC1)
ALLOC FI(SORTIN) DA(&SDSNIN) SHR
ALLOC FI(SORTOUT) DA(&SDSNOUT) SHR
ALLOC FI(SYSPRINT) DA(*)
 ISPEXEC FTOPEN TEMP
 ISPEXEC FTINCL SORT#S
 ISPEXEC FTCLOSE
 ISPEXEC VGET ZTEMPF
 ALLOC FI(SYSIN) DA('&ZTEMPF') SHR
KOMM CLEAR
WRITE ******* SORT BEING INVOKED *******
DOPROGL SORT
WRITE
WRITE
WRITE *******    SORT ENDED      *******
WRITE
FREE FI(SYSPRINT SYSOUT SORTIN SORTOUT    +
        SORTWK01 SORTWK02 SORTWK03 SYSIN)
ALLOC FI(SYSIN)    DA(*)
