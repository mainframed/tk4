)BODY
%-------------- +FDR ABR%ARCHIVE+FUNCTION SELECTION MENU %--------------
%COMMAND ===>_ZCMD
%
%   1+- SELECT A DATASET FOR%ARCHIVE+PROCESSING
%   2+- SELECT A DATASET FOR%RESTORE FROM ARCHIVE+PROCESSING
%   3+-%RESET+ARCHIVE SELECTION INDICATORS (REVERSE OPTION 1)
%   4+-%REMOVE+DATASET(S) FROM ARCHIVE RESTORE QUEUE (REVERSE OPTION 2)
%   5+-%DELETE+DATASET(S) FROM THE ARCHIVE
%   6+-%RESET+DELETE FROM ARCHIVE INDICATORS (REVERSE OPTION 5)
%
)INIT
  .HELP = ISR00003
  &ZHTOP = ISR00003   /* TUTORIAL TABLE OF CONTENTS        */
  &ZHINDEX = ISR91000 /* TUTORIAL INDEX - 1ST PAGE         */
)PROC
  &ZSEL = TRANS( TRUNC (&ZCMD,'.')
                1,'CMD(ABRARCH1)'
                2,'CMD(ABRARCH2)'
                3,'CMD(ABRARCH3)'
                4,'CMD(ABRARCH4)'
                5,'CMD(ABRARCH5)'
                6,'CMD(ABRARCH6)'
              ' ',' '
                *,'?' )
)END
