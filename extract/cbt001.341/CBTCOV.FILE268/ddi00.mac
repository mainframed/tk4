      SUBROUTINE  DDI00 (WIDTH,HEIGHT,DEPTH)
C
C     MODIFIED FOR USE WITH ABE
C
C     CALLS DDISZ,DDINF
C
C     (DOT MATRIX INITIALIZATION)
C     ESTABLISH THE ACCEPTABLE RANGE OF X, Y, AND Z TO BE
C     (0,WIDTH), (0,HEIGHT), AND (0,DEPTH), WHERE NONE OF THESE
C     EXCEEDS THE UNIT SQUARE, AND INITIALIZE REQUIRED SCALE
C     FACTORS AND OTHER PARAMETERS IN COMMON.
C
      REAL             DEPTH,       HEIGHT,      WIDTH
C
      INCLUDE (DDI01)
      INCLUDE (DDI03)
C
      XMAX = WIDTH
      YMAX = HEIGHT
      ZMAX = DEPTH
      CALL DDISZ (2.54*11)
      LINEWT = 1
      IMAGE = .FALSE.
C
C     INITIALIZATION OF BITMAP INTERFACE.
C
      CALL DDINF
      RETURN
      END
