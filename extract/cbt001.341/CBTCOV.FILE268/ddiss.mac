      SUBROUTINE  DDISS (STEPSZ)
C
C     MODIFIED FOR USE WITH ABE
C
C     CALLS NOONE
C
C     (STEP SIZE)
C     RETURN THE DISPLAY DEVICE STEP SIZE IN NORMALIZED DEVICE
C     COORDINATES.
C
      REAL             STEPSZ,AMAX1
C
      INCLUDE (DDI01)
C
      STEPSZ = 1.0/AMAX1(SX,SY)
      RETURN
      END
