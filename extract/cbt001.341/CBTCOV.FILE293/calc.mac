   CALC: PROCEDURE(X$) OPTIONS (MAIN);

      DCL X$ CHAR(72) VAR;
      DCL IHESARC ENTRY(FIXED BIN(31));
      DCL XANS FIXED BIN(15);
      DCL (OT1,OT2,OT3,OT4,OT5) CHAR(80) VAR;
      DCL AOP CHAR(2) ;
      DCL POA CHAR(3) ;
      DCL TRG_FLG CHAR (3) INIT ('ON') ;
      DCL XFLAG FIXED BIN(15) INIT(0);

      ON CONVERSION BEGIN;
        DISPLAY('INVALID INPUT');
        GO TO EXIT;
        END;

      ON ZERODIVIDE BEGIN;
        DISPLAY('DIVISION BY ZERO NOT ALLOWED');
        GO TO EXIT;
        END;

      IF SUBSTR(X$,1,1) = '?' THEN DO;
        DISPLAY('CALC WILL PERFORM THE FOLLOWING OPERATIONS:    ');
        DISPLAY(' X + Y                                         ');
        DISPLAY(' X - Y                                         ');
        DISPLAY(' X * Y                                         ');
        DISPLAY(' X / Y                                         ');
        DISPLAY(' X MO Y (MODULUS OF X BY Y)                    ');
        DISPLAY(' X ** Y (X TO THE POWER Y)                     ');
        DISPLAY(' X SQ ( SQUARE ROOT)                           ');
        DISPLAY(' X SI ( SIN OF X IN DEGREES)                   ');
        DISPLAY(' X CO ( COS OF X IN DEGREES)                   ');
        DISPLAY(' X TA ( TAN OF X IN DEGREES)                   ');
        DISPLAY('                                               ');
        DISPLAY(' RESULT TYPED. IF ARGUMENT X IS PRECEEDED BY   ');
        DISPLAY(' THE LETTER X, I.E. CALC X3 * 4, THE RESULT    ');
        DISPLAY(' WILL BE AN INTEGER IN THE RETURN CODE.        ');
        GOTO EXIT;
        END;

      J = 72;
      DO I = 1 TO J BY 1 WHILE (SUBSTR(X$,1,1) = ' ');
        X$ = SUBSTR (X$,2,J-1);
        J = J - 1;
        END;

      A1 = INDEX ( X$, ' ') ;
      AX = INDEX ( X$, 'X') ;
      IF AX ^= 0 THEN DO;
        XFLAG = 1;
        A1 = A1 - 1;
        X$ = SUBSTR(X$,2,A1);
        END;
      ARG1 = SUBSTR (X$,1,A1) ;
      X$ = SUBSTR (X$,A1+1,J-A1);

      DO I = 1 TO J BY 1 WHILE (SUBSTR(X$,1,1) = ' ');
        X$ = SUBSTR (X$,2,J-1);
        J = J - 1 ;
        END;

      AOP  = SUBSTR (X$,1,2) ;
      POA  = SUBSTR (X$,1,3) ;
      X$ = SUBSTR (X$,3,J-2);

      IF (AOP = '+ ') ×
          (AOP = '- ') ×
           (AOP = '* ') ×
             (AOP = '/ ') ×
              (AOP = 'MO') ×
               (AOP = '**') THEN TRG_FLG = 'OFF';
                 DO I = 1 TO J BY 1 WHILE (SUBSTR(X$,1,1) = ' ');
                   X$ = SUBSTR (X$,2,J-1);
                   J = J - 1 ;
                   END;

                 A1 = INDEX ( X$, ' ') ;
                 ARG2 = SUBSTR (X$,1,A1) ;

      IF AOP = '+ ' THEN
        ANS = ARG1 + ARG2;

        ELSE IF AOP = '- ' THEN
               ANS = ARG1 - ARG2;

          ELSE IF AOP = '* ' THEN
                 ANS = ARG1 * ARG2;

            ELSE IF AOP = '/ ' THEN
                   ANS = ARG1 / ARG2;

             ELSE IF AOP = 'MO' THEN
                    ANS = MOD(ARG1,ARG2);

              ELSE IF AOP = '**' THEN
                     ANS = ARG1 ** ARG2;

                ELSE IF AOP = 'SI' THEN
                       ANS = SIND(ARG1) * ARG2 ;

                  ELSE IF AOP = 'CO' THEN
                         ANS = COSD(ARG1) * ARG2 ;

                    ELSE IF AOP = 'TA' THEN
                           ANS = TAND(ARG1) ;

                      ELSE IF AOP = 'SQ' THEN
                             ANS = SQRT(ABS(ARG1)) ;

              ELSE DO;
                     DISPLAY('INVALID OPERATOR');
                     GO TO EXIT;
                     END;

        PUT STRING(OT1) EDIT (ARG1) (F(13,4));
        PUT STRING(OT3) EDIT (ANS) (F(17,5));

        IF ( XFLAG = 0 ) THEN DO;
          IF ( TRG_FLG = 'ON' ) THEN
              DISPLAY (POA××' OF '××OT1××' = '××OT3) ;
          ELSE DO ;
              PUT STRING(OT2) EDIT (ARG2) (F(13,4));
              DISPLAY (OT1××'   '××AOP××OT2××'    ='××OT3);
          END ;
        END ;
        ELSE DO;
          XANS = ANS;
          CALL IHESARC(XANS);
        END;


  EXIT:
      END CALC;
