%--------------------------  O.C     Change Option Panel  --------------
%OPTION ===>_ZCMD
+
+ISPF LIBRARY:
+   PROJECT%===>_PRJ1    %
+   LIBRARY%===>_LIB1    %
+   TYPE   %===>_TYP1    %
+
+Other partitioned or sequential data set:
+   DATA SET NAME %===>_DSN1
+   VOLUME SERIAL %===>_VOL1  +  (If not cataloged)
)INIT
  .HELP   = P71PHS
  IF (&DSN1 = &Z)
    .CURSOR = TYP1
  IF (&DSN1 ^= &Z)
    .CURSOR = DSN1
)PROC
  IF (&DSN1= ' ')
    VER (&PRJ1,NB,DSNAME,MSG=PDSM712S)
    VER (&LIB1,NB,DSNAME,MSG=PDSM713S)
    VER (&TYP1,NB,DSNAME,MSG=PDSM714S)
    &OPT2 = 1
    IF (&VOL1^= ' ')  .MSG =PDSM717S
  IF (&DSN1^= ' ')
     &ENT1=TRUNC(&DSN1,'(')
     IF (&ENT1 ^= &DSN1) /* MEMBER NAME GIVEN */
       &T=TRUNC(&ENT1,1)
       IF (&T='''')
         &ENT1=.TRAIL
       IF (&T^='''')
        IF (&ZPREFIX^='')
         &ENT1='&ZPREFIX..&ENT1'
     IF (&ENT1 = &DSN1) /* MEMBER NAME NOT GIVEN */
       &T=TRUNC(&DSN1,1)
       IF (&T='''')
         &ENT1=.TRAIL
         &ENT1=TRUNC(&ENT1,'''')
       IF (&T^='''')
         &ENT1='&ZPREFIX..&DSN1'
         IF (&ZPREFIX='') &ENT1=&DSN1
     VER (&VOL1,NAME)
     &DSN1='''&ENT1'''
     VER (&DSN1,DSNAME,MSG=PDSM719S)
     &OPT2 = 2
     IF (&VOL1^= ' ')
        &OPT2 = 3
  &PDSZSEL = TRANS( &OPT2,
                1,'CHANGE ''&PRJ1..&LIB1..&TYP1'''
                2,'CHANGE &DSN1'
                3,'CHANGE &DSN1 VOL(&VOL1)'
               ' ',' '
                *,'?' )
)END
