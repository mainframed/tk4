1CLRSCN: PROCEDURE (PGSW) REORDER;
    DECLARE
      PGSW               FIXED BIN(15,0);
    IF PAG# >= #PAGES
       THEN FRM = PAH;
    ELSE FRM = PAR;
    IF PGSW = AUTO
       THEN DO;
         KEY = MOD(PAG#,#PAGES);
         PBUFF = SCREEN;
         PSCR = SCR;
         IF PAGE
            THEN WRITE FILE(SYSPAGE) FROM(PBUF) KEYFROM(KEY);
         ELSE DO;
           FRM = PAI;
           CALL SELECT(1);
           RETURN;
         END;
         SCREEN = '';
         SIND = 0;
         SCR(*,*) = 0;
         PAG# = PAG# + 1;
         RPAG# = PAG#;
         RC = TPUT(ESC ×× WRITE ×× 'C' ×× INDIC ××
                   SELPAG ×× RESSCNC);
         RETURN;
       END;
    ELSE;
    IF PGSW = OFF
       THEN DO;
         FRM = PAI;
         CALL SELECT(1);
         SCREEN = '';
         RETURN;
       END;
    ELSE;
    KEY = MOD(PAG#,#PAGES);
    PBUFF = SCREEN;
    PSCR = SCR;
    IF PAGE
       THEN WRITE FILE(SYSPAGE) FROM(PBUF) KEYFROM(KEY);
    ELSE FRM = PAI;
    CALL SELECT(1);
    SCREEN = '';
    SIND = 0;
    SCR(*,*) = 0;
 END CLRSCN;
