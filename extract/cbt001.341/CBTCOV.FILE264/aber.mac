 /**********************************************************************
 *                                                                     *
 * ABER IS CALLED TO READ IN A DATA SET.                               *
 *                                                                     *
 **********************************************************************/
   %INCLUDE ABESUB;
 ABESUB(ABER) PARMS(RHPTR,RHHDRPT,INDDP,OPCODE,EOFSW);
   %INCLUDE ABESUBA;
   DCL IN FILE ENV(CONSECUTIVE) RECORD INPUT;
   DCL OPCODE CHAR(*) VAR;
     /* MAY BE EITHER 'INIT', 'NXT', 'EOF', OR 'FREE' */
   DCL INDDP PTR;
     /* PTR TO ALCSTR FOR INPUT */
   DCL QUAL CHAR(8);
   DCL EOFSW BIT(1);
   IF SUBSTR(INDDP->ALCFLAG,7,1)
     THEN DO;
       EOFSW = '1'B;
       OPCODE = 'INIT';
       RETURN;
       END;
   ON ENDFILE(IN) GO TO EOF;
   EOFSW = '0'B;
   IF OPCODE = 'INIT'
     THEN DO;
       CLOSE FILE(IN);
       OPEN FILE(IN) TITLE(INDDP->ALCDDN);
       OPCODE = 'NXT';
       END;
   IF OPCODE = 'FREE'
     THEN DO;
       CLOSE FILE(IN);
       CALL #DOFRE(INDDP); /* CALL DOFRE */
       RETURN;
       END;
   READ FILE(IN) INTO(INDDP->ALCBUF);
   GO TO ENDREAD;
 EOF:
   CLOSE FILE(IN);
   EOFSW = '1'B;
   OPCODE = 'INIT';
 ENDREAD:
   END ABER;
