 PERF:  PROC(SMFPTR,SETARY);
         DFT RANGE(*) FIXED BIN VALUE(FIXED BIN(31,0));
         % NOPRINT;
 /* @DCLSTR WILL CONTAIN ALL OF THE ARRAYS DEFINED BY @PLOT */
         % DCL @DCLSTR CHAR;
         % @DCLSTR = '';
 /* @SETPT WILL CONTAIN ALL OF THE STATEMENTS NECESSARY TO
    STRING ALL OF THE DREC STRUCTURES TOGETHER VIA THEIR @PTR
    FIELDS.  THIS CODE WILL BE EXECUTED ONCE AT INITIATION */
         % DCL @SETPT CHAR;
         % @SETPT = '';
 /* @CURDB WILL CONTAIN THE DBREC NAME GENERATED BY THE MOST
    RECENTLY ISSUED @PLOT MACRO.  WILL BE SET INITIALLY TO @DBHDR. */
         % DCL @CURDB CHAR;
         % @CURDB = '@DBHDR';
         % INCLUDE @PLOT;
         % INCLUDE @TYPE;
         % INCLUDE @EOJ;
         % PRINT;
         IF SMFREC = 'START'
              THEN DO;
                   CALL @SETDB;
                   @TYP = ADDR(@TYPESTR);
                   SMFPTR = ADDR(@DBHDR);
                   RETURN;
                   END;
         IF SMFREC = 'STOP'
              THEN GO TO EOJ;
