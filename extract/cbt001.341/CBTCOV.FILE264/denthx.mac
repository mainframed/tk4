 DENTHX:  PROC(CODE,SCANPTR,DATA,RHPTR,SUBENT,RHHDRPT)
   OPTIONS(REENTRANT);
 /* THIS SUBROUTINE IS CALLED BY DENTC TO SET UP A RECORD FOR DISPLAY
    IN HEX MODE. */
   % DCL @PROCNAME CHAR;
   % @PROCNAME='';
   % INCLUDE DENTSUB;
   DCL CODE CHAR(3);
   DCL SCANPTR PTR;
   DCL DATA CHAR(*) VAR;
   DCL 1 SKEL BASED(SKELPTR),
     2 SKNXT PTR,
     2 STC FIXED BIN(15,0),
     2 ENC FIXED BIN(15,0);
   DCL TROUT ENTRY;
   L=LENGTH(SCANPTR->RECSTR);
   DATA='';
   IF RHPSKHD=NULL
     THEN CALL NSEG(COLUMN,TRUNCATE);
     ELSE DO SKELPTR=RHPSKHD REPEAT SKNXT WHILE(SKELPTR^=NULL)
       UNTIL(ENC>=L);
       CALL NSEG(STC,ENC);
       END;
 NSEG:  PROC(ST,EN) OPTIONS(REENTRANT);
   DCL (ST,EN,I) FIXED BIN(15,0);
   DCL (IB,OB) CHAR(300) VAR;
   IF ST <= L
     THEN DO;
       IB=SUBSTR(SCANPTR->RECSTR,ST,MIN(L-ST,EN-ST)+1);
       IF CODE='HEX'
         THEN DO;
           OB=REPEAT('  ',LENGTH(IB)-1);
           CALL TROUT(IB,OB);
           END;
         ELSE DO;
           OB='';
           DO I=1 TO LENGTH(IB);
             OB=OB××SUBSTR(IB,I,1)××' ';
             END;
           END;
       DATA=DATA××SUBSTR(OB,1,MIN(LENGTH(OB),2*(EN-ST+1)));
       END;
   END NSEG;
   END DENTHX;
