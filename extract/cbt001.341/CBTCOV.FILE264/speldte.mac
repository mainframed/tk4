 /* SPELDTE */
 /*
0*$.HE GENERALIZED SUBROUTINES - SPELDTE
0*$.HE SPELL OUT THE FULL DATE
0*$.PL 55
0*$.PN 0
0*$.PA
0*$.SS
0*$.NF
0*$09/28/77
0*$AUTHOR:  T. SMITH
0*$SOURCE MODULE NAME:  SPELDTE
0*$DOCOMENTATION ID:  0*$
0*$.FI L
0*$.SP 5
0*$THIS SUBROUTINE CAN BE INVOKED TO CONVERT A DATE FROM THE FORM
0*$RETURNED BY THE DATE BUILTIN FUNCTION (YYMMDD), TO A CHARACTER
0*$STRING OF THE FORM 'THURSDAY, SEPTEMBER 22, 1977', FOR EXAMPLE.
0*$CALL FORMAT IS AS FOLLOWS:
0*$.SP 1
0*$.IN 5
0*$.NF
0*$DCL SPELDTE ENTRY(CHAR(6))
0*$  RETURNS(CHAR(40) VARYING);
0*$DCL DATE BUILTIN;
0*$PUT LIST(SPELDTE(DATE));
0*$.FI L
0*$.IN 0
0*$.SP 1
 */
 SPELDTE:  PROC(PLIDTE) RETURNS(CHAR(40) VARYING);
         DCL PLIDTE CHAR(6);
         DCL JULIAN FIXED DEC(5,0);
         DCL GREGDTE CHAR(6);
         DCL MONTAB(12) CHAR(10) VARYING STATIC INIT(
           'JANUARY',
           'FEBRUARY',
           'MARCH',
           'APRIL',
           'MAY',
           'JUNE',
           'JULY',
           'AUGUST',
           'SEPTEMBER',
           'OCTOBER',
           'NOVEMBER',
           'DECEMBER');
         DCL DOWTAB(7) CHAR(10) VARYING STATIC INIT(
           'SUNDAY',
           'MONDAY',
           'TUESDAY',
           'WEDNESDAY',
           'THURSDAY',
           'FRIDAY',
           'SATURDAY');
         DCL DOW ENTRY(FIXED DEC(5,0)) RETURNS(FIXED BIN(15,0));
         DCL GREGJUL ENTRY(CHAR(6)) RETURNS(FIXED DEC(5,0));
         DCL RETSTR CHAR(40) VARYING INIT('');
         RETURN(DOWTAB(DOW(GREGJUL(SUBSTR(PLIDTE,3,4)××
           SUBSTR(PLIDTE,1,2)))) ×× ', ' ××
           MONTAB(SUBSTR(PLIDTE,3,2)) ×× ' ' ××
           SUBSTR(PLIDTE,5,2) ×× ', 19' ×× SUBSTR(PLIDTE,1,2));
         END;
