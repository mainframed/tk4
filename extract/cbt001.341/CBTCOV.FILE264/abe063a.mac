 /* ABE063A - STATIC STORAGE */
 ABE063A: PROC(RHPLOT79);
   DCL RHPLOT79 PTR;
   DCL 1 DDI01 EXT,
   %INCLUDE ABE063I;

   DCL NULL BUILTIN;
   DCL SYSGETM ENTRY(CHAR(2),FIXED BIN(31,0),FIXED BIN(31,0),
     FIXED BIN(15,0),FIXED BIN(31,0));
   DCL (I,J) FIXED BIN(31,0);

   IF RHPLOT79^=NULL
     THEN RETURN;
   RHPLOT79=ADDR(DDI01);
   CALL SYSGETM('RU',810000,I,99,J);
   IF J^=0
     THEN SIGNAL ERROR;
   UNSPEC(BITMAPA)=UNSPEC(I);
   END ABE063A;
