   /********************************************************************
   *                                                                   *
   * THIS STRUCTURE WILL BE DECLARED IN ABE063 WITH THE EXTERNAL       *
   * LEVEL 01 NAME OF DDI01.  PTR RHPLOT79 IN RHHDR WILL BE SET TO     *
   * POINT TO THIS CONTROL BLOCK ON THE FIRST ENTRY TO ABE063.         *
   *                                                                   *
   * THE ELEMENTS IN THIS STRUCTURE ARE ONE-FOR-ONE COMPATIBLE WITH    *
   * ELEMENTS IN THE DDI01 FORTRAN COMMON BLOCK USED IN THE FORTRAN    *
   * INTERFACE ROUTINE TO THE PLOT79 GRAPHICS PACKAGE.                 *
   * NOTE THAT DEFAULTS HAVE BEEN SET UP FOR THE CITOH PRINTER.        *
   *                                                                   *
   ********************************************************************/
     2 DSSIZE DEC FLOAT(6) INIT(27.94),
       /* DISPLAY SURFACE SIZE IN CM */
     2 HORZNT BIT(32) INIT('0'B),
       /* HORIZONTAL MAPPING IN EFFECT */
     2 IMAGE BIT(32) INIT('0'B),
       /* IMAGE TRANSFORMATION IN EFFECT */
     2 LINEWT FIXED BIN(31,0) INIT(1),
       /* LINE WEIGHT (1..25 SCALE) */
     2 PLSTPX DEC FLOAT(6) INIT(.031750),
       /* PLOTTER X STEP SIZE IN CM = 2.54/PLXDPI WHERE PLXDPI IS THE
       NUMBER OF DOTS PER INCH HORIZONTALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLXDPI IS 60. */
     2 PLSTPY DEC FLOAT(6) INIT(.035278),
       /* PLOTTER Y STEP SIZE IN CM = 2.54/PLYDPI WHERE PLYDPI IS THE
       NUMBER OF DOTS PER INCH VERTICALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLYDPI IS 72. */
     2 SX DEC FLOAT(6) INIT(799),
       /* SCALE FACTORS (UNIT SQUARE TO PLOT STEPS) */
     2 SY DEC FLOAT(6) INIT(504),
       /* SCALE FACTORS (UNIT SQUARE TO PLOT STEPS) */
     2 TIMAGE(4,4) DEC FLOAT(6),
       /* TRANSFORMATION MATRIX */
     2 XMAX DEC FLOAT(6) INIT(1),
       /* NORMALIZED DEVICE SPACE X EXTENT */
     2 YMAX DEC FLOAT(6) INIT(1),
       /* NORMALIZED DEVICE SPACE Y EXTENT */
     2 ZMAX DEC FLOAT(6) INIT(0),
       /* NORMALIZED DEVICE SPACE Z EXTENT */
     2 PLXDPI FIXED BIN(31,0) INIT(80),
       /* NUMBER OF DOTS PER INCH HORIZONTALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLXDPI IS 60.  CAN BE RESET BY
       USING THE DEVICE KEYWORD TO THE GR SUBCOMMAND. */
     2 PLYDPI FIXED BIN(31,0) INIT(72),
       /* NUMBER OF DOTS PER INCH VERTICALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLYDPI IS 72.  CAN BE RESET BY
       USING THE DEVICE KEYWORD TO THE GR SUBCOMMAND. */
     2 PLMAXX FIXED BIN(31,0) INIT(792),
       /* MAXIMUM NUMBER OF DOTS HORIZONTALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLMAXX IS 660. CAN BE RESET BY
       USING THE DEVICE KEYWORD TO THE GR SUBCOMMAND.  THIS VALUE
       MUST NOT EXCEED BMD2. */
     2 PLMAXY FIXED BIN(31,0) INIT(504),
       /* MAXIMUM NUMBER OF DOTS VERTICALLY ON THE PHYSICAL DEVICE,
       E.G. ON THE PRINTRONIX, PLMAXY IS 720.  CAN BE RESET BY
       USING THE DEVICE KEYWORD TO THE GR SUBCOMMAND. THIS VALUE
       MUST NOT EXCEED BMD1 */
     2 MAXBTX FIXED BIN(31,0) INIT(800),
       /* MAXIMUM ALLOWABLE BITMAP INDEX ALONG THE X AXIS. THIS VALUE
       IS SET IN MODULE DDISZ BASED ON THE MAXIMUM HORIZONTAL DIMENSION
       OF THE PHYSICAL DEVICE (SEE VARIABLE PLMAXX). */
     2 MAXBTY FIXED BIN(31,0) INIT(504),
       /* MAXIMUM ALLOWABE BITMAP INDEX ALONG THE Y AXIS. THIS VALUE
       IS SET IN MODULE DDISZ BASED ON THE MAXIMUM VERTICAL DIMENSION
       OF THE PHYSICAL DEVICE (SEE VARIABLE PLMAXY). */
     2 BMD1 FIXED BIN(31,0) INIT(900),
       /* HBOUND(BITMAP,1) */
     2 BMD2 FIXED BIN(31,0) INIT(900),
       /* HBOUND(BITMAP,2) */
     2 CURPEN CHAR(1) INIT('1'),
       /* CURRENT PEN NUMBER */
     2 PENARY(9) CHAR(1)
       INIT('1','2','3','4','5','6','7','8',' '),
     2 BITMAP_ELSIZE FIXED BIN(15,0) INIT(8),
       /* SIZE IN BITS OF EACH BITMAP ELEMENT */
     2 BITMAPA PTR;
       /* POINTER TO 810000-BYTE PIXEL ARRAY */
   DCL 1 BITMAP(900,900) CHAR(1) BASED(BITMAPA);
