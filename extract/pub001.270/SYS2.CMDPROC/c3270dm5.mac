PROC 0
/*-------------------------------------------------------------------*/
/* DEMO 5 - SHOW FULL SCREEN WITH SOME INPUT FIELDS (EDS)            */
/*-------------------------------------------------------------------*/
INITVARS: -
   SET INP2 = &STR(                                          )
SCREEN1: -
  C3270 WCC(B) CLEAR
  C3270 WCC(B) NE MESSAGE(5,5,'ENTER INPUT:Ö$Ö3{AÖC6ÖH2123456Ö×4<')
  C3270 WCC(B) NE MESSAGE(6,5,' MORE INPUT:Ö$Ö3{AÖC3ÖH0ABCDEFÖ×4<')
  C3270 WCC(B) NE MESSAGE(7,5,'THIRD INPUT:Ö$Ö3{AÖC1ÖH4999999Ö×4<')
  C3270 WCC(B) MESSAGE(9,5,'FILL THE FIELDS AND PRESS <ENTER> ...')
  C3270 WCC(B) READTO(INP2) CURSOR(5,18)
SCREENL: -
  C3270 WCC(B) CLEAR
  WRITE &STR('RESULT FROM READ:')
  WRITE &INP2
  WRITE C3270 (AKA KOMM) DEMO ENDED
EXIT
